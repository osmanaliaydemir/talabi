@model Talabi.Portal.Models.PaymentsViewModel
@using Talabi.Portal.Services
@inject ILocalizationService LocalizationService
@{
    ViewData["Title"] = LocalizationService.GetString("Payments");
    Layout = "_Layout";
}

<div class="row">
    <!-- Daily Earnings -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            @LocalizationService.GetString("DailyEarnings")
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalEarnings.ToString("C2")</div>
                    </div>
                    <div class="col-auto text-right">
                        <i class="fas fa-wallet fa-2x text-gray-300 mb-2"></i>
                        <div>
                            <button type="button" class="btn btn-sm btn-success shadow-sm" data-toggle="modal" data-target="#depositModal">
                                <i class="fas fa-plus fa-sm text-white-50"></i> @LocalizationService.GetString("Deposit")
                            </button>
                            <button type="button" class="btn btn-sm btn-primary shadow-sm" data-toggle="modal" data-target="#withdrawModal">
                                <i class="fas fa-minus fa-sm text-white-50"></i> @LocalizationService.GetString("Withdraw")
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Weekly Earnings -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            @LocalizationService.GetString("WeeklyEarnings")
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.WeeklyEarnings.ToString("C2")</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar-week fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Monthly Earnings -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            @LocalizationService.GetString("MonthlyEarnings")
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.MonthlyEarnings.ToString("C2")</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar-alt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Total Earnings -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            @LocalizationService.GetString("CurrentBalance")
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalEarnings.ToString("C2")</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@LocalizationService.GetString("FilterTransactions")</h6>
    </div>
    <div class="card-body">
        <form id="filterForm" class="row align-items-end">
            <div class="col-md-4 mb-3">
                <label class="form-label">@LocalizationService.GetString("StartDate")</label>
                <input type="date" id="startDate" name="startDate" class="form-control">
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label">@LocalizationService.GetString("EndDate")</label>
                <input type="date" id="endDate" name="endDate" class="form-control">
            </div>
            <div class="col-md-4 mb-3 d-flex gap-2">
                <button type="button" class="btn btn-primary flex-fill" onclick="filterTransactions()">
                    <i class="fas fa-filter"></i> @LocalizationService.GetString("Apply")
                </button>
                <button type="button" class="btn btn-secondary" onclick="exportTransactions()" title="@LocalizationService.GetString("Export")" style="margin-left: 10px;">
                    <i class="fas fa-file-export"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@LocalizationService.GetString("TransactionHistory")</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>@LocalizationService.GetString("ReferenceNo")</th>
                    <th>@LocalizationService.GetString("Date")</th>
                    <th>@LocalizationService.GetString("Amount")</th>
                    <th>@LocalizationService.GetString("TransactionType")</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Transactions)
                {
                    <tr>
                        <td>
                            @if (item.CustomerOrderId != "-")
                            {
                                <span>@item.CustomerOrderId</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>@item.CreatedAt.ToLocalTime().ToString("g")</td>
                        <td class="@(item.Status == "Withdrawal" || item.Status == "Payment" ? "text-danger" : "text-success")">
                            @((item.Status == "Withdrawal" || item.Status == "Payment" ? "-" : "+") + item.TotalAmount.ToString("C2"))
                        </td>
                        <td>
                            @{
                                var badgeClass = item.Status switch
                                {
                                    "Deposit" => "bg-success",
                                    "Withdrawal" => "bg-warning",
                                    "Payment" => "bg-danger",
                                    "Earning" => "bg-info",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass">@LocalizationService.GetString(item.Status)</span>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Check URL params first
            const urlParams = new URLSearchParams(window.location.search);
            const startParam = urlParams.get('startDate');
            const endParam = urlParams.get('endDate');

            if (startParam) {
                document.getElementById('startDate').value = startParam.split('T')[0];
            } else {
                 const today = new Date();
                 const firstDay = new Date(today.getFullYear(), today.getMonth(), 1);
                 document.getElementById('startDate').valueAsDate = firstDay;
            }

            if (endParam) {
                 document.getElementById('endDate').value = endParam.split('T')[0];
            } else {
                document.getElementById('endDate').valueAsDate = new Date();
            }

            // Determine DataTable Language
            let langUrl = "//cdn.datatables.net/plug-ins/1.10.24/i18n/English.json";
            const currentCulture = '@System.Globalization.CultureInfo.CurrentUICulture.Name';
            
            if (currentCulture === 'tr-TR') {
                langUrl = "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json";
            } else if (currentCulture === 'ar-SA') {
                langUrl = "//cdn.datatables.net/plug-ins/1.10.24/i18n/Arabic.json";
            }

            $('#dataTable').DataTable({
                "language": {
                    "url": langUrl
                },
                "order": [[1, "desc"]]
            });
        });

        function filterTransactions() {
            const startDate = $('#startDate').val();
            const endDate = $('#endDate').val();
            
            // Reload page with query params (implementation would look like this)
            // In a real SPA or ajax scenario, we would reload table data
            window.location.href = `/Payments?startDate=${startDate}&endDate=${endDate}`;
        }

        function exportTransactions() {
            const startDate = $('#startDate').val();
            const endDate = $('#endDate').val();
            
            let url = `/Payments/Export?t=${new Date().getTime()}`;
            if(startDate) url += `&startDate=${startDate}`;
            if(endDate) url += `&endDate=${endDate}`;

            window.location.href = url;
        }
    </script>
}

<!-- Deposit Modal -->
<div class="modal fade" id="depositModal" tabindex="-1" role="dialog" aria-labelledby="depositModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="depositModalLabel">@LocalizationService.GetString("DepositMoney")</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="Deposit" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="depositAmount">@LocalizationService.GetString("Amount")</label>
                        <div class="input-group">
                            <input type="number" step="0.01" min="1" class="form-control" id="depositAmount" name="amount" required>
                            <div class="input-group-append">
                                <span class="input-group-text">TRY</span>
                            </div>
                        </div>
                    </div>
                    <div class="alert alert-info">
                        <small>@LocalizationService.GetString("DepositMockNote")</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@LocalizationService.GetString("Cancel")</button>
                    <button type="submit" class="btn btn-success">@LocalizationService.GetString("DepositConfirm")</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Withdraw Modal -->
<div class="modal fade" id="withdrawModal" tabindex="-1" role="dialog" aria-labelledby="withdrawModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="withdrawModalLabel">@LocalizationService.GetString("WithdrawMoney")</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="Withdraw" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="withdrawAmount">@LocalizationService.GetString("Amount")</label>
                        <div class="input-group">
                            <input type="number" step="0.01" min="1" class="form-control" id="withdrawAmount" name="amount" required>
                            <div class="input-group-append">
                                <span class="input-group-text">TRY</span>
                            </div>
                        </div>
                        <small class="form-text text-muted">@LocalizationService.GetString("MaxWithdrawAmount"): @Model.TotalEarnings.ToString("C2")</small>
                    </div>
                    <div class="form-group">
                        <label for="iban">@LocalizationService.GetString("IBAN")</label>
                        <input type="text" class="form-control" id="iban" name="iban" placeholder="TR..." required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@LocalizationService.GetString("Cancel")</button>
                    <button type="submit" class="btn btn-primary">@LocalizationService.GetString("WithdrawConfirm")</button>
                </div>
            </form>
        </div>
    </div>
</div>