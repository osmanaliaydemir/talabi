<script>
    </script>
<script>
    <script>
        // Use the existing badge logic
        async function refreshUnreadBadge() {
            try {
                const res = await fetch('@Url.Action("UnreadCount", "Notifications")', { credentials: 'same-origin' });
                if (!res.ok) return;
                const data = await res.json();
                const el = document.getElementById('notifBadge');
                if (!el) return;
                if (data.count && data.count > 0) {
                    el.textContent = data.count;
                    el.style.display = '';
                } else {
                    el.style.display = 'none';
                }
            } catch { }
        }

        function loadRecentNotifications() {
            $('#notificationDropdownContent').load('@Url.Action("GetRecent", "Notifications")');
        }

        // Initialize SignalR
        async function initSignalR() {
            try {
                // Fetch config from Portal Backend
                const response = await fetch('@Url.Action("GetSignalRConfig", "Auth")');
                if (!response.ok) {
                    console.warn('Failed to get SignalR config');
                    return;
                }
                
                const config = await response.json();
                if (!config.url || !config.accessToken || !config.vendorId) {
                    console.error('Invalid SignalR config');
                    return;
                }

                const signalRManager = new SignalRManager(config.url, config.accessToken);
                await signalRManager.connect();
                
                // Join Vendor Group
                await signalRManager.invoke("JoinVendorGroup", String(config.vendorId));
                
                // Listen for New Order
                signalRManager.on("NewOrder", (data) => {
                    console.log("New Order Received:", data);
                    showToast(`Yeni Sipariş! #${data.orderId} - ${data.totalAmount} TL`, 'success');
                    playNotificationSound();
                    
                    refreshUnreadBadge();
                    // If dropdown is open, reload it
                    if (document.getElementById('notifDropdown').getAttribute('aria-expanded') === 'true') {
                        loadRecentNotifications();
                    }
                    
                    // Dispatch event for other scripts (e.g. Orders Table)
                    window.dispatchEvent(new CustomEvent('signalr:newOrder', { detail: data }));
                });

                // Listen for Order Status Change
                signalRManager.on("OrderStatusChanged", (data) => {
                    console.log("Order Status Changed:", data);
                    showToast(`Sipariş Güncellendi: #${data.orderId} - ${data.status}`, 'info');
                    
                    refreshUnreadBadge(); // Maybe not needed if status change doesn't create notification? 
                    // (Actually vendor doesn't get notification in DB for status change initiated by themselves,
                    // but if another admin did it, maybe? For now, refresh anyway).
                    
                    window.dispatchEvent(new CustomEvent('signalr:orderStatusChanged', { detail: data }));
                });
                
                // Store manager globally
                window.talabiSignalR = signalRManager;

            } catch (err) {
                console.error('SignalR Init failed:', err);
            }
        }

        if (document.getElementById('notifBadge')) {
            refreshUnreadBadge();
            // Initial load of recent notifications not needed until click, but good for cache
            // loadRecentNotifications(); 
            
            // Start polling as fallback
            setInterval(refreshUnreadBadge, 30000);
            
            // Start Real-time
            initSignalR();
        }

        /* Global Loader Logic */
        window.addEventListener('beforeunload', function () {
            // Optional: Filter out specific links if needed
            document.getElementById('global-loader').classList.add('visible');
        });

        window.addEventListener('pageshow', function (event) {
            // Remove loader on page load or back button navigation
            setTimeout(() => {
                document.getElementById('global-loader').classList.remove('visible');
            }, 300); // Small delay for smoothness
        });
    </script>
@await RenderSectionAsync("Scripts", required: false)
</body>

