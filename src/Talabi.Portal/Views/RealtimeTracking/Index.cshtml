@inject Talabi.Portal.Services.ILocalizationService LocalizationService
@{
    ViewData["Title"] = LocalizationService.GetString("RealtimeTracking");
}

<style>
    .tracking-map-container {
        height: 80vh; /* Geniş bir harita alanı */
        border-radius: 15px;
        overflow: hidden;
        position: relative;
        background-color: #e5e9ec; /* Map placeholder color */
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
    }
    
    .tracking-sidebar {
        height: 80vh;
        overflow-y: auto;
        padding-right: 10px;
    }

    .courier-card {
        background: #fff;
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 15px;
        border: 1px solid #eee;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .courier-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        border-color: #4e73df;
    }

    .courier-card.active {
        border-color: #4e73df;
        background-color: #f8faff;
    }

    .status-badge {
        font-size: 0.7rem;
        padding: 4px 8px;
        border-radius: 20px;
    }

    .map-overlay-info {
        position: absolute;
        top: 20px;
        right: 20px;
        background: white;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.15);
        min-width: 250px;
        display: none;
        z-index: 1000;
        animation: fadeIn 0.3s ease;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<div class="container-fluid p-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">@LocalizationService.GetString("RealtimeTracking")</h1>
            <p class="text-muted small mb-0">@LocalizationService.GetString("ActiveDeliveriesDescription")</p>
        </div>
        <div>
            <span class="badge bg-success shadow-sm p-2">
                <i class="fas fa-circle fa-xs me-1 anim-pulse"></i> @string.Format(LocalizationService.GetString("CouriersCount"), 3)
            </span>
        </div>
    </div>

    <div class="row">
        <!-- Sidebar List -->
        <div class="col-lg-3 tracking-sidebar custom-scrollbar">
            <!-- Mock Data -->
            <div class="courier-card" onclick="focusCourier('courier1')">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div class="d-flex align-items-center">
                        <div class="avatar bg-primary text-white rounded-circle me-2 d-flex align-items-center justify-content-center" style="width:35px;height:35px">
                            <i class="fas fa-motorcycle"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold">Ahmet Yılmaz</h6>
                            <span class="text-xs text-muted">ID: #C-1023</span>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="status-badge bg-info text-white">@LocalizationService.GetString("OnWay")</span>
                    <small class="text-success fw-bold">@string.Format(LocalizationService.GetString("OrderNo"), "4521")</small>
                </div>
                <div class="mt-2 text-xs text-muted">
                    <i class="fas fa-map-marker-alt me-1"></i> Kadıköy, İstanbul
                </div>
            </div>

            <div class="courier-card" onclick="focusCourier('courier2')">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div class="d-flex align-items-center">
                        <div class="avatar bg-info text-white rounded-circle me-2 d-flex align-items-center justify-content-center" style="width:35px;height:35px">
                            <i class="fas fa-motorcycle"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold">Mehmet Demir</h6>
                            <span class="text-xs text-muted">ID: #C-1045</span>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="status-badge bg-warning text-dark">@LocalizationService.GetString("PickingUp")</span>
                    <small class="text-success fw-bold">@string.Format(LocalizationService.GetString("OrderNo"), "4525")</small>
                </div>
                <div class="mt-2 text-xs text-muted">
                    <i class="fas fa-map-marker-alt me-1"></i> Beşiktaş, İstanbul
                </div>
            </div>

            <div class="courier-card" onclick="focusCourier('courier3')">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div class="d-flex align-items-center">
                        <div class="avatar bg-success text-white rounded-circle me-2 d-flex align-items-center justify-content-center" style="width:35px;height:35px">
                            <i class="fas fa-motorcycle"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold">Ali Kaya</h6>
                            <span class="text-xs text-muted">ID: #C-1050</span>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="status-badge bg-success text-white">@LocalizationService.GetString("Delivered")</span>
                    <small class="text-success fw-bold">@string.Format(LocalizationService.GetString("OrderNo"), "4510")</small>
                </div>
                <div class="mt-2 text-xs text-muted">
                    <i class="fas fa-map-marker-alt me-1"></i> Üsküdar, İstanbul
                </div>
            </div>
        </div>

        <!-- Map Area -->
        <div class="col-lg-9">
            <div class="tracking-map-container d-flex align-items-center justify-content-center flex-column">
                <!-- Leaflet Map Container -->
                <div id="trackingMap" style="width: 100%; height: 100%; border-radius: 15px; z-index: 1;"></div>

                <div id="mapOverlay" class="map-overlay-info">
                    <div class="d-flex justify-content-between">
                        <h6 class="fw-bold mb-0" id="courierName"></h6>
                        <small class="text-success" id="courierEta"></small>
                    </div>
                    <hr class="my-2">
                    <div class="small">
                        <div>
                            <strong>@LocalizationService.GetString("Speed"):</strong> <span id="courierSpeed"></span> @LocalizationService.GetString("SpeedUnit")
                        </div>
                        <div><strong>@LocalizationService.GetString("Distance"):</strong> <span id="courierDistance"></span> km</div>
                        <div>
                            <strong>@LocalizationService.GetString("Destination"):</strong> <span id="courierDest"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Leaflet CSS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>

<script>
        let map;
        let markers = {};
        // Couriers object now stores real data
        let couriers = {};

        $(document).ready(function () {
            initMap();
            loadActiveDeliveries();
            waitForSignalR();
        });

        function initMap() {
            // Default center Istanbul
            map = L.map('trackingMap').setView([41.0082, 28.9784], 12);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '© OpenStreetMap contributors'
            }).addTo(map);
        }

        function loadActiveDeliveries() {
            $.get('@Url.Action("GetActiveDeliveries", "RealtimeTracking")', function(data) {
                // Clear list if needed
                $('.tracking-sidebar').empty();
                
                if(data.length === 0) {
                     $('.tracking-sidebar').html('<div class="text-center p-4 text-muted">@LocalizationService.GetString("NoActiveDeliveries")</div>');
                     return;
                }

                data.forEach(c => {
                    couriers[c.courierId] = {
                        id: c.courierId,
                        name: c.courierName,
                        lat: c.lat,
                        lng: c.lng,
                        orderNo: c.orderNo,
                        status: c.status,
                        destination: c.destination,
                        color: c.color || 'blue'
                    };

                    addCourierMarker(couriers[c.courierId]);
                    addCourierCard(couriers[c.courierId]);
                });
                
                // Fit bounds if we have markers
                if(Object.keys(markers).length > 0) {
                    const group = new L.featureGroup(Object.values(markers));
                    map.fitBounds(group.getBounds().pad(0.1));
                }
            });
        }

        function addCourierCard(c) {
             const html = `
             <div class="courier-card" onclick="focusCourier('${c.id}')" id="card-${c.id}">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div class="d-flex align-items-center">
                        <div class="avatar bg-primary text-white rounded-circle me-2 d-flex align-items-center justify-content-center" style="width:35px;height:35px">
                            <i class="fas fa-motorcycle"></i>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold">${c.name}</h6>
                            <span class="text-xs text-muted">Order #${c.orderNo}</span>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="status-badge bg-info text-white">${c.status}</span>
                </div>
                 <div class="mt-2 text-xs text-muted">
                    <i class="fas fa-map-marker-alt me-1"></i> ${c.destination}
                </div>
            </div>`;
            $('.tracking-sidebar').append(html);
        }

        function addCourierMarker(courier) {
            if(markers[courier.id]) {
                markers[courier.id].setLatLng([courier.lat, courier.lng]);
                return;
            }

            const icon = L.divIcon({
                className: 'custom-div-icon',
                html: `<div style="background-color:${courier.color};width:15px;height:15px;border-radius:50%;border:2px solid white;box-shadow:0 0 5px rgba(0,0,0,0.5);"></div>`,
                iconSize: [20, 20],
                iconAnchor: [10, 10]
            });

            const marker = L.marker([courier.lat, courier.lng], { icon: icon })
                .bindPopup(`<b>${courier.name}</b><br>#${courier.orderNo}`)
                .addTo(map);
            
            markers[courier.id] = marker;
        }

        function focusCourier(id) {
            $('.courier-card').removeClass('active');
            $(`#card-${id}`).addClass('active');

            const courier = couriers[id];
            if (courier && markers[id]) {
                map.flyTo([courier.lat, courier.lng], 15);
                markers[id].openPopup();
                
                // Update Overlay
                $('#courierName').text(courier.name);
                $('#courierEta').text('...'); // Calculate if possible
                $('#courierSpeed').text('...');
                $('#courierDistance').text('...');
                $('#courierDest').text(courier.destination);
                
                $('#mapOverlay').hide().fadeIn();
            }
        }

        function waitForSignalR() {
            if (window.talabiSignalR) {
                console.log("Attaching Realtime Tracking listeners...");
                window.talabiSignalR.on("CourierLocationUpdated", (data) => {
                    console.log("Update received:", data);
                    if (couriers[data.courierId]) {
                        // Update local data
                        couriers[data.courierId].lat = data.lat;
                        couriers[data.courierId].lng = data.lng;
                        
                        // Move marker
                        if (markers[data.courierId]) {
                            markers[data.courierId].setLatLng([data.lat, data.lng]);
                            
                            // If focused, follow?
                            // Optional: map.panTo(...) if user wants follow mode
                        }
                    } else {
                        // New courier not in list? Reload active deliveries to sync
                        // Debounce this to avoid spam
                         loadActiveDeliveries();
                    }
                });
            } else {
                setTimeout(waitForSignalR, 500);
            }
        }
    </script>
}
