@using Talabi.Core.Entities
@using Talabi.Portal.Services
@inject ILocalizationService LocalizationService
@model IEnumerable<Coupon>

@{
    ViewData["Title"] = LocalizationService.GetString("DiscountCoupons");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@LocalizationService.GetString("DiscountCoupons")</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i> @LocalizationService.GetString("NewCoupon")
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>@LocalizationService.GetString("Code")</th>
                        <th>@LocalizationService.GetString("Discount")</th>
                        <th>@LocalizationService.GetString("MinCart")</th>
                        <th>@LocalizationService.GetString("Expiration")</th>
                        <th>@LocalizationService.GetString("Status")</th>
                        <th>@LocalizationService.GetString("Actions")</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.Code</strong>
                                <br/>
                                <small class="text-muted">@item.Title</small>
                            </td>
                            <td>
                                @if(item.DiscountType == DiscountType.Percentage)
                                {
                                    <span class="badge bg-info text-dark">%@item.DiscountValue.ToString("0")</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@item.DiscountValue.ToString("C2")</span>
                                }
                            </td>
                            <td>@item.MinCartAmount.ToString("C2")</td>
                            <td>
                                @item.ExpirationDate.ToString("dd.MM.yyyy")
                                @if(DateTime.UtcNow > item.ExpirationDate)
                                {
                                    <span class="badge bg-danger ms-1">@LocalizationService.GetString("Expired")</span>
                                }
                            </td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">@LocalizationService.GetString("Active")</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@LocalizationService.GetString("Passive")</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="ToggleStatus" asp-route-id="@item.Id" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-outline-warning" title="@LocalizationService.GetString("ChangeStatus")">
                                            <i class="fas fa-sync-alt"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
