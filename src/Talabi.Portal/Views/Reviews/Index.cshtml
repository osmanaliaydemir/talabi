@inject Talabi.Portal.Services.ILocalizationService LocalizationService
@{
    ViewData["Title"] = LocalizationService.GetString("Reviews");
}

<div class="container-fluid p-0">
    <!-- Header -->
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h1 class="h3 mb-0 text-gray-800">@LocalizationService.GetString("Reviews")</h1>
        </div>
    </div>

    <!-- Filters -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@LocalizationService.GetString("Filter")</h6>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">@LocalizationService.GetString("Rating")</label>
                    <select id="filterRating" class="form-select">
                        <option value="">@LocalizationService.GetString("All")</option>
                        <option value="5">5 @LocalizationService.GetString("Stars")</option>
                        <option value="4">4 @LocalizationService.GetString("Stars")</option>
                        <option value="3">3 @LocalizationService.GetString("Stars")</option>
                        <option value="2">2 @LocalizationService.GetString("Stars")</option>
                        <option value="1">1 @LocalizationService.GetString("Star")</option>
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button class="btn btn-secondary w-100" onclick="refreshTable()">
                        <i class="fas fa-filter me-1"></i> @LocalizationService.GetString("Apply")
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Data Table -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="reviewsTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>@LocalizationService.GetString("Customer")</th>
                        <th>@LocalizationService.GetString("Product")</th>
                        <th>@LocalizationService.GetString("Rating")</th>
                        <th>@LocalizationService.GetString("Comment")</th>
                        <th>@LocalizationService.GetString("Date")</th>
                    </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>

    <script>
        let dataTable;

        $(document).ready(function() {
            initDataTable();
        });

        function initDataTable() {
            dataTable = $('#reviewsTable').DataTable({
                serverSide: true,
                processing: true,
                ajax: {
                    url: '/Reviews/GetList',
                    type: 'GET',
                    data: function(d) {
                        d.rating = $('#filterRating').val();
                    }
                },
                columns: [
                    { data: 'customerName', name: 'customerName' },
                    { data: 'productName', name: 'productName' },
                    { 
                        data: 'rating', 
                        name: 'rating',
                        render: function(data) {
                            let stars = '';
                            for(let i=0; i<5; i++) {
                                if(i < data) stars += '<i class="fas fa-star text-warning"></i>';
                                else stars += '<i class="far fa-star text-warning"></i>';
                            }
                            return stars;
                        }
                    },
                    { data: 'comment', name: 'comment' },
                    { 
                        data: 'createdAt', 
                        name: 'createdAt',
                        render: function(data) {
                            return new Date(data).toLocaleString();
                        }
                    }
                ],
                order: [[4, 'desc']], 
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/' + ('@System.Globalization.CultureInfo.CurrentCulture.Name' === 'tr-TR' ? 'tr' : 'en-GB') + '.json'
                }
            });
        }

        function refreshTable() {
            dataTable.ajax.reload();
        }
    </script>
}
