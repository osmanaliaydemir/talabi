@inject Talabi.Portal.Services.ILocalizationService LocalizationService
@{
    ViewData["Title"] = LocalizationService.GetString("ReportsAndAnalytics");
}

<div class="container-fluid p-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">@LocalizationService.GetString("ReportsAndAnalytics")</h1>
        <div>
             <button class="btn btn-sm btn-outline-primary me-2">
                <i class="fas fa-download fa-sm text-white-50"></i> @LocalizationService.GetString("ExportReport")
            </button>
            <select class="form-select d-inline-block w-auto form-select-sm">
                <option>@LocalizationService.GetString("ThisWeek")</option>
                <option>@LocalizationService.GetString("ThisMonth")</option>
                <option>@LocalizationService.GetString("ThisYear")</option>
            </select>
        </div>
    </div>

    <!-- KPI Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                @LocalizationService.GetString("TotalEarnings")</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">₺40,000</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                @LocalizationService.GetString("TotalOrders")</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">215</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-shopping-bag fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                @LocalizationService.GetString("AvgOrderValue")</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">₺186</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-receipt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                @LocalizationService.GetString("CustomerSatisfaction")</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">4.8</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-star fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Earnings Chart -->
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">@LocalizationService.GetString("EarningsOverview")</h6>
                </div>
                <div class="card-body">
                    <div class="chart-area" style="height: 320px;">
                        <canvas id="earningsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Product Share Chart -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">@LocalizationService.GetString("TopSellingCategories")</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie pt-4 pb-2" style="height: 320px;">
                         <canvas id="categoriesChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Mock Charts
        const ctx = document.getElementById('earningsChart');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['@LocalizationService.GetString("Mon")', '@LocalizationService.GetString("Tue")', '@LocalizationService.GetString("Wed")', '@LocalizationService.GetString("Thu")', '@LocalizationService.GetString("Fri")', '@LocalizationService.GetString("Sat")', '@LocalizationService.GetString("Sun")'],
                datasets: [{
                    label: '@LocalizationService.GetString("Earnings") (₺)',
                    data: [1200, 1900, 1500, 2500, 2200, 3000, 3500],
                    borderColor: '#4e73df',
                    tension: 0.3,
                    fill: false
                }]
            },
            options: {
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        const ctxPie = document.getElementById('categoriesChart');
        new Chart(ctxPie, {
            type: 'doughnut',
            data: {
                labels: ['Burger', 'Pizza', 'Kebap', 'İçecekler'],
                datasets: [{
                    data: [45, 25, 20, 10],
                    backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e'],
                }]
            },
            options: {
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom' }
                }
            }
        });
    </script>
}
