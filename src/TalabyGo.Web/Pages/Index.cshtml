@page
@model IndexModel
@{
    ViewData["Title"] = "Talaby Go - Your New Way to Shop";
}

<!-- Hero Section -->
<section id="home" class="hero">
    <div class="container hero-container">
        <div class="hero-content fade-in">
            <h1 data-i18n="hero.title">طلبي جو - طريقتك الجديدة للتسوق</h1>
            <p data-i18n="hero.subtitle">التجارة الإلكترونية والتوصيل السريع في تطبيق واحد</p>
            <p data-i18n="hero.description">استمتع بتجربة تسوق فريدة مع طلبي جو. اطلب منتجاتك المفضلة واحصل على توصيل سريع إلى باب منزلك</p>
            
            <div class="download-buttons">
                <a href="#" class="btn btn-primary">
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                    </svg>
                    <span data-i18n="cta.appStore">حمل من App Store</span>
                </a>
                <a href="#" class="btn btn-outline">
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M3.609 2l9.891 8.989v2.022L3.609 22V2zm10.39 10.989V11.01L23.5 5.977V18.023l-9.5-5.034z"/>
                    </svg>
                    <span data-i18n="cta.playStore">حمل من Google Play</span>
                </a>
            </div>
        </div>
        
        <div class="hero-image fade-in">
            <img src="/images/logo_yeni.png" alt="Talaby Go App" />
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="features">
    <div class="container">
        <div class="section-header fade-in">
            <h2 class="section-title" data-i18n="features.title">مميزات التطبيق</h2>
            <p class="section-subtitle" data-i18n="features.subtitle">كل ما تحتاجه في مكان واحد</p>
        </div>
        
        <div class="features-grid">
            <div class="feature-card fade-in">
                <div class="feature-icon">🛒</div>
                <h3 data-i18n="features.ecommerce.title">التجارة الإلكترونية</h3>
                <p data-i18n="features.ecommerce.description">تصفح آلاف المنتجات من متاجر متنوعة</p>
            </div>
            
            <div class="feature-card fade-in">
                <div class="feature-icon">🚀</div>
                <h3 data-i18n="features.delivery.title">التوصيل السريع</h3>
                <p data-i18n="features.delivery.description">احصل على طلباتك في أسرع وقت ممكن</p>
            </div>
            
            <div class="feature-card fade-in">
                <div class="feature-icon">💳</div>
                <h3 data-i18n="features.wallet.title">المحفظة الرقمية</h3>
                <p data-i18n="features.wallet.description">ادفع بسهولة وأمان عبر محفظتك الإلكترونية</p>
            </div>
            
            <div class="feature-card fade-in">
                <div class="feature-icon">🏪</div>
                <h3 data-i18n="features.vendors.title">إدارة المتاجر</h3>
                <p data-i18n="features.vendors.description">للبائعين: أدر متجرك ومنتجاتك بكل سهولة</p>
            </div>
            
            <div class="feature-card fade-in">
                <div class="feature-icon">📦</div>
                <h3 data-i18n="features.orders.title">تتبع الطلبات</h3>
                <p data-i18n="features.orders.description">تابع طلباتك لحظة بلحظة حتى وصولها</p>
            </div>
            
            <div class="feature-card fade-in">
                <div class="feature-icon">🌍</div>
                <h3 data-i18n="features.multilingual.title">دعم متعدد اللغات</h3>
                <p data-i18n="features.multilingual.description">التطبيق متوفر بالعربية والتركية والإنجليزية</p>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section">
    <div class="container">
        <div class="section-header fade-in">
            <h2 data-i18n="stats.title" style="color: white;">طلبي جو بالأرقام</h2>
        </div>
        
        <div class="stats-grid">
            <div class="stat-item fade-in">
                <span class="stat-number" data-count="10000">10,000</span>
                <span class="stat-label" data-i18n="stats.users">مستخدم نشط</span>
            </div>
            
            <div class="stat-item fade-in">
                <span class="stat-number" data-count="500">500</span>
                <span class="stat-label" data-i18n="stats.vendors">متجر</span>
            </div>
            
            <div class="stat-item fade-in">
                <span class="stat-number" data-count="50000">50,000</span>
                <span class="stat-label" data-i18n="stats.orders">طلب تم توصيله</span>
            </div>
            
            <div class="stat-item fade-in">
                <span class="stat-number" data-count="5">5.0</span>
                <span class="stat-label" data-i18n="stats.rating">تقييم المستخدمين</span>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="features">
    <div class="container">
        <div class="section-header fade-in">
            <h2 class="section-title" data-i18n="about.title">عن طلبي جو</h2>
        </div>
        
        <div class="features-grid" style="grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));">
            <div class="feature-card fade-in">
                <div class="feature-icon">🎯</div>
                <h3 data-i18n="about.vision.title">رؤيتنا</h3>
                <p data-i18n="about.vision.description">نطمح لأن نكون المنصة الرائدة في مجال التجارة الإلكترونية والتوصيل السريع في المنطقة</p>
            </div>
            
            <div class="feature-card fade-in">
                <div class="feature-icon">🚀</div>
                <h3 data-i18n="about.mission.title">مهمتنا</h3>
                <p data-i18n="about.mission.description">توفير تجربة تسوق سهلة وآمنة مع خدمة توصيل سريعة وموثوقة</p>
            </div>
            
            <div class="feature-card fade-in">
                <div class="feature-icon">📧</div>
                <h3 data-i18n="about.contact.title">تواصل معنا</h3>
                <p data-i18n="about.contact.description">نحن هنا للإجابة على استفساراتك</p>
                <p style="margin-top: 1rem;"><strong>info@talabygo.com</strong></p>
            </div>
        </div>
    </div>
</section>

