<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Talaby Go</title>

    <!-- SEO Meta Tags -->
    <meta name="description" content="Talaby Go - E-commerce and fast delivery platform. Shop from thousands of products and get fast delivery to your doorstep."/>
    <meta name="keywords" content="talaby, talabi, talaby go, e-commerce, delivery, shopping, online store"/>
    <meta name="author" content="Talaby Go"/>

    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="Talaby Go - Your New Way to Shop"/>
    <meta property="og:description" content="E-commerce and fast delivery in one app"/>
    <meta property="og:type" content="website"/>
    <meta property="og:image" content="/images/logo.png"/>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/images/logo.png"/>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Noto+Sans+Arabic:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true"/>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
<!-- Navbar -->
<nav class="navbar">
    <div class="container navbar-container">
        <a href="/" class="navbar-logo">
            <img src="/images/logo.png" alt="Talaby Go Logo"/>
            <span>Talaby Go</span>
        </a>

        <ul class="nav-menu">
            <li>
                <a href="#home" data-i18n="nav.home">الرئيسية</a>
            </li>
            <li>
                <a href="#features" data-i18n="nav.features">المميزات</a>
            </li>
            <li>
                <a href="#about" data-i18n="nav.about">عن التطبيق</a>
            </li>

            <li>
                <div class="lang-switcher">
                    <button class="lang-btn active" data-lang="ar">AR</button>
                    <button class="lang-btn" data-lang="tr">TR</button>
                    <button class="lang-btn" data-lang="en">EN</button>
                </div>
            </li>
        </ul>

        <button class="menu-toggle">
            <span></span>
            <span></span>
            <span></span>
        </button>
    </div>
</nav>

<!-- Main Content -->
<main>
    @RenderBody()
</main>

<!-- Footer -->
<footer class="footer">
    <div class="container">
        <div class="footer-content">
            <div class="footer-section">
                <h3>Talaby Go</h3>
                <p data-i18n="footer.description">طلبي جو - منصة التجارة الإلكترونية والتوصيل السريع</p>
            </div>

            <div class="footer-section">
                <h3 data-i18n="footer.quickLinks">روابط سريعة</h3>
                <a href="#home" data-i18n="nav.home">الرئيسية</a>
                <a href="#features" data-i18n="nav.features">المميزات</a>
                <a href="#about" data-i18n="nav.about">عن التطبيق</a>
            </div>

            <div class="footer-section">
                <h3 data-i18n="footer.contact">تواصل معنا</h3>
                <p><strong data-i18n="footer.email">البريد الإلكتروني:</strong> info@talabygo.com</p>
            </div>
        </div>

        <div class="footer-bottom">
            <p>&copy; 2026 Talaby Go. <span data-i18n="footer.rights">جميع الحقوق محفوظة</span>.</p>
        </div>
    </div>
</footer>

<!-- Scripts -->
<script src="~/js/i18n.js" asp-append-version="true"></script>
<script src="~/js/main.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
