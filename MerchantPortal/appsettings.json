{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ApiSettings": {
    "BaseUrl": "https://localhost:7001",
    "SignalRHubUrl": "https://localhost:7001/hubs"
  },
  "Authentication": {
    "CookieName": "GetirMerchantAuth",
    "ExpireTimeSpan": "12:00:00",
    "SlidingExpiration": true
  }
}