@model Getir.MerchantPortal.Models.GeoAnalyticsViewModel
@inject ILocalizationService LocalizationService

@{
    ViewData["Title"] = LocalizationService.GetString("GeoAnalytics");
}

<div class="page-header d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="page-title">@LocalizationService.GetString("GeoAnalytics")</h1>
        <p class="text-muted mb-0">@LocalizationService.GetString("GeoAnalyticsDescription")</p>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5 class="card-title mb-0">@LocalizationService.GetString("GeoAnalyticsFilters")</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">@LocalizationService.GetString("StartDate")</label>
                <input class="form-control" type="date" name="startDate" value="@(Model.Filter.StartDate?.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="col-md-3">
                <label class="form-label">@LocalizationService.GetString("EndDate")</label>
                <input class="form-control" type="date" name="endDate" value="@(Model.Filter.EndDate?.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="col-md-2">
                <label class="form-label">@LocalizationService.GetString("Latitude")</label>
                <input class="form-control" type="number" step="0.0001" name="latitude" value="@(Model.Filter.Latitude?.ToString("F4", System.Globalization.CultureInfo.InvariantCulture))" />
            </div>
            <div class="col-md-2">
                <label class="form-label">@LocalizationService.GetString("Longitude")</label>
                <input class="form-control" type="number" step="0.0001" name="longitude" value="@(Model.Filter.Longitude?.ToString("F4", System.Globalization.CultureInfo.InvariantCulture))" />
            </div>
            <div class="col-md-2">
                <label class="form-label">@LocalizationService.GetString("RadiusKm")</label>
                <input class="form-control" type="number" step="0.5" name="radiusKm" value="@Model.Filter.RadiusKm" />
            </div>
            <div class="col-md-2">
                <label class="form-label">@LocalizationService.GetString("CategoryType")</label>
                <input class="form-control" type="number" name="categoryType" value="@(Model.Filter.CategoryType?.ToString())" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-filter"></i> @LocalizationService.GetString("ApplyFilters")
                </button>
            </div>
            <div class="col-md-2">
                <a asp-action="Index" class="btn btn-outline-secondary w-100">@LocalizationService.GetString("Reset")</a>
            </div>
        </form>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="card-title mb-0">@LocalizationService.GetString("LocationAnalyticsSummary")</h5>
            </div>
            <div class="card-body">
                @if (Model.Analytics != null)
                {
                    <div class="row g-3">
                        <div class="col-md-4 col-sm-6">
                            <div class="stat-tile bg-primary-subtle text-primary">
                                <div class="stat-label">@LocalizationService.GetString("TotalLocations")</div>
                                <div class="stat-value">@Model.Analytics.TotalLocations</div>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="stat-tile bg-success-subtle text-success">
                                <div class="stat-label">@LocalizationService.GetString("UniqueUsers")</div>
                                <div class="stat-value">@Model.Analytics.UniqueUsers</div>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="stat-tile bg-warning-subtle text-warning">
                                <div class="stat-label">@LocalizationService.GetString("HeatmapPoints")</div>
                                <div class="stat-value">@Model.Analytics.HeatmapData.Count</div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <h6 class="fw-semibold mb-3">@LocalizationService.GetString("HeatmapPreview")</h6>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>@LocalizationService.GetString("Latitude")</th>
                                    <th>@LocalizationService.GetString("Longitude")</th>
                                    <th>@LocalizationService.GetString("Count")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var point in Model.Analytics.HeatmapData.Take(10))
                                {
                                    <tr>
                                        <td>@point.Latitude.ToString("F4")</td>
                                        <td>@point.Longitude.ToString("F4")</td>
                                        <td>@point.Count</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-muted text-center">@LocalizationService.GetString("NoAnalyticsData")</div>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="card-title mb-0">@LocalizationService.GetString("DeliveryZoneCoverage")</h5>
            </div>
            <div class="card-body">
                @if (Model.Coverage != null)
                {
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="fw-semibold">@LocalizationService.GetString("TotalZones")</span>
                        <span class="badge bg-info-subtle text-info">@Model.Coverage.TotalZones</span>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-sm align-middle">
                            <thead>
                                <tr>
                                    <th>@LocalizationService.GetString("ZoneName")</th>
                                    <th class="text-end">@LocalizationService.GetString("MerchantCount")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var zone in Model.Coverage.Zones.OrderByDescending(z => z.MerchantCount))
                                {
                                    <tr>
                                        <td>@zone.Name</td>
                                        <td class="text-end">@zone.MerchantCount</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-muted text-center">@LocalizationService.GetString("NoCoverageData")</div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mt-1">
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">@LocalizationService.GetString("NearbyMerchants")</h5>
                <span class="badge bg-secondary-subtle text-secondary">@Model.NearbyMerchants.Count</span>
            </div>
            <div class="card-body">
                @if (Model.NearbyMerchants.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm align-middle">
                            <thead>
                                <tr>
                                    <th>@LocalizationService.GetString("Merchant")</th>
                                    <th>@LocalizationService.GetString("DistanceKm")</th>
                                    <th>@LocalizationService.GetString("DeliveryFee")</th>
                                    <th>@LocalizationService.GetString("EstimatedDeliveryTimeMinutes")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var merchant in Model.NearbyMerchants)
                                {
                                    <tr>
                                        <td>@merchant.Name</td>
                                        <td>@merchant.DistanceKm.ToString("F1")</td>
                                        <td>@merchant.DeliveryFee.ToString("C2")</td>
                                        <td>@merchant.EstimatedDeliveryTimeMinutes</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-muted text-center">@LocalizationService.GetString("NoNearbyMerchants")</div>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="card-title mb-0">@LocalizationService.GetString("LocationHistory")</h5>
            </div>
            <div class="card-body">
                @if (Model.LocationHistory.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var location in Model.LocationHistory)
                        {
                            <li class="list-group-item">
                                <div class="fw-semibold">@location.Address ?? $"{location.Latitude:F4}, {location.Longitude:F4}"</div>
                                <div class="text-muted small">@location.CreatedAt.ToLocalTime().ToString("g")</div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="text-muted text-center">@LocalizationService.GetString("NoLocationHistory")</div>
                }
            </div>
        </div>
    </div>
</div>


