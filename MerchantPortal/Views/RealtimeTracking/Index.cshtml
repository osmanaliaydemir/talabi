@model Getir.MerchantPortal.Models.RealtimeTrackingViewModel
@inject ILocalizationService LocalizationService
@using System.Linq

@{
    ViewData["Title"] = LocalizationService.GetString("RealtimeTracking");
}

<div class="page-header d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="page-title">@LocalizationService.GetString("RealtimeTracking")</h1>
        <p class="text-muted mb-0">@LocalizationService.GetString("RealtimeTrackingDescription")</p>
    </div>
</div>

@if (TempData["Success"] is string successMessage)
{
    <div class="alert alert-success">@successMessage</div>
}
@if (TempData["Error"] is string errorMessage)
{
    <div class="alert alert-danger">@errorMessage</div>
}

<div class="row g-4">
    <div class="col-lg-4">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">@LocalizationService.GetString("ActiveTrackings")</h5>
                <span class="badge bg-secondary-subtle text-secondary">@Model.ActiveTrackings.Count</span>
            </div>
            <div class="list-group list-group-flush">
                @if (Model.ActiveTrackings.Any())
                {
                    foreach (var tracking in Model.ActiveTrackings.OrderByDescending(t => t.LastUpdatedAt))
                    {
                        var isSelected = Model.SelectedTracking?.Id == tracking.Id;
                        <a class="list-group-item list-group-item-action @(isSelected ? "active" : "")"
                           href="@Url.Action("Index", new { trackingId = tracking.Id })">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <strong>#@tracking.OrderId.ToString().Substring(0, 8)</strong>
                                    <div class="small">@tracking.StatusDisplayName</div>
                                </div>
                                <div class="text-end">
                                    @if (tracking.EstimatedMinutesRemaining.HasValue)
                                    {
                                        <div class="small text-muted">@tracking.EstimatedMinutesRemaining.Value @LocalizationService.GetString("MinutesRemaining")</div>
                                    }
                                    <div class="small text-muted">@tracking.LastUpdatedAt.ToLocalTime().ToString("g")</div>
                                </div>
                            </div>
                        </a>
                    }
                }
                else
                {
                    <div class="list-group-item text-muted text-center py-3">
                        @LocalizationService.GetString("NoActiveTrackings")
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        @if (Model.SelectedTracking != null)
        {
            var tracking = Model.SelectedTracking;
            var trackingStatusClass = Model.IsTrackingActive
                ? "badge bg-success-subtle text-success"
                : "badge bg-secondary-subtle text-secondary";

            <div class="card mb-4">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title mb-0">@LocalizationService.GetString("TrackingDetails")</h5>
                        <div class="text-muted small">
                            @LocalizationService.GetString("Order"): <strong>#@tracking.OrderId</strong>
                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        <span class="badge bg-primary-subtle text-primary">@tracking.StatusDisplayName</span>
                        <span class="@trackingStatusClass">
                            @(Model.IsTrackingActive
                                ? LocalizationService.GetString("TrackingActive")
                                : LocalizationService.GetString("TrackingInactive"))
                        </span>
                    </div>
                </div>
            </div>

            <ul class="nav nav-tabs nav-tabs-bordered" id="trackingTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="overview-tab" data-bs-toggle="tab" data-bs-target="#overview-tab-pane" type="button" role="tab" aria-controls="overview-tab-pane" aria-selected="true">
                        @LocalizationService.GetString("RealtimeOverview")
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="location-tab" data-bs-toggle="tab" data-bs-target="#location-tab-pane" type="button" role="tab" aria-controls="location-tab-pane" aria-selected="false">
                        @LocalizationService.GetString("RealtimeLocationTab")
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="eta-tab" data-bs-toggle="tab" data-bs-target="#eta-tab-pane" type="button" role="tab" aria-controls="eta-tab-pane" aria-selected="false">
                        @LocalizationService.GetString("RealtimeEtaTab")
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="notifications-tab" data-bs-toggle="tab" data-bs-target="#notifications-tab-pane" type="button" role="tab" aria-controls="notifications-tab-pane" aria-selected="false">
                        @LocalizationService.GetString("RealtimeNotificationsTab")
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="settings-tab" data-bs-toggle="tab" data-bs-target="#settings-tab-pane" type="button" role="tab" aria-controls="settings-tab-pane" aria-selected="false">
                        @LocalizationService.GetString("RealtimeSettingsTab")
                    </button>
                </li>
            </ul>

            <div class="tab-content pt-3" id="trackingTabsContent">
                <div class="tab-pane fade show active" id="overview-tab-pane" role="tabpanel" aria-labelledby="overview-tab">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="text-muted">@LocalizationService.GetString("Order")</h6>
                                    <p class="mb-2">
                                        <strong>#@tracking.OrderId</strong><br />
                                        <span class="text-muted small">@LocalizationService.GetString("CreatedAt"): @tracking.CreatedAt.ToLocalTime().ToString("g")</span>
                                    </p>
                                    <h6 class="text-muted">@LocalizationService.GetString("Courier")</h6>
                                    <p class="mb-2">
                                        @if (!string.IsNullOrEmpty(tracking.CourierName))
                                        {
                                            <span>@tracking.CourierName</span>
                                            if (!string.IsNullOrEmpty(tracking.CourierPhone))
                                            {
                                                <br /><span class="text-muted small">@tracking.CourierPhone</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">@LocalizationService.GetString("CourierNotAssigned")</span>
                                        }
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-muted">@LocalizationService.GetString("Location")</h6>
                                    <p class="mb-2">
                                        @if (tracking.Latitude.HasValue && tracking.Longitude.HasValue)
                                        {
                                            <span>@string.Format("{0:F5}, {1:F5}", tracking.Latitude.Value, tracking.Longitude.Value)</span><br />
                                        }
                                        <span class="text-muted">@tracking.Address ?? LocalizationService.GetString("AddressUnknown")</span>
                                    </p>
                                    <h6 class="text-muted">@LocalizationService.GetString("Timing")</h6>
                                    <ul class="list-unstyled mb-0">
                                        <li>
                                            <strong>@LocalizationService.GetString("EstimatedArrival"):</strong>
                                            @if (tracking.EstimatedArrivalTime.HasValue)
                                            {
                                                @tracking.EstimatedArrivalTime.Value.ToLocalTime().ToString("t")
                                            }
                                            else
                                            {
                                                <span class="text-muted">@LocalizationService.GetString("Unknown")</span>
                                            }
                                        </li>
                                        <li>
                                            <strong>@LocalizationService.GetString("MinutesRemaining"):</strong>
                                            @(tracking.EstimatedMinutesRemaining?.ToString() ?? LocalizationService.GetString("Unknown"))
                                        </li>
                                        <li>
                                            <strong>@LocalizationService.GetString("DistanceToDestination"):</strong>
                                            @(tracking.DistanceFromDestination?.ToString("F2") ?? "0") km
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="alert alert-info mt-3">
                                <strong>@LocalizationService.GetString("StatusMessage")</strong><br />
                                @if (!string.IsNullOrWhiteSpace(tracking.StatusMessage))
                                {
                                    @tracking.StatusMessage
                                }
                                else
                                {
                                    <span class="text-muted">@LocalizationService.GetString("NoStatusMessage")</span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">@LocalizationService.GetString("UpdateStatus")</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="UpdateStatus" method="post" class="row g-3">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="OrderTrackingId" value="@tracking.Id" />
                                <div class="col-md-4">
                                    <label class="form-label">@LocalizationService.GetString("Status")</label>
                                    <select class="form-select" name="Status">
                                        @{
                                            var statuses = new Dictionary<int, string>
                                            {
                                                {1, "OrderPlaced"},
                                                {2, "OrderConfirmed"},
                                                {3, "Preparing"},
                                                {4, "ReadyForPickup"},
                                                {5, "PickedUp"},
                                                {6, "OnTheWay"},
                                                {7, "NearDestination"},
                                                {8, "Arrived"},
                                                {9, "Delivered"},
                                                {10, "Cancelled"}
                                            };
                                            foreach (var status in statuses)
                                            {
                                                <option value="@status.Key" selected="@(status.Key == tracking.Status ? "selected" : null)">
                                                    @LocalizationService.GetString(status.Value)
                                                </option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col-md-8">
                                    <label class="form-label">@LocalizationService.GetString("StatusMessage")</label>
                                    <input type="text" class="form-control" name="StatusMessage" value="@tracking.StatusMessage" />
                                </div>
                                <div class="col-12 text-end">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-save"></i> @LocalizationService.GetString("Save")
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">@LocalizationService.GetString("TrackingMetrics")</h5>
                        </div>
                        <div class="card-body">
                            @if (Model.Metrics.Any())
                            {
                                <div class="row g-3">
                                    @foreach (var metric in Model.Metrics.OrderBy(m => m.Key))
                                    {
                                        var metricValue = metric.Value switch
                                        {
                                            null => "-",
                                            double d => d.ToString("0.##"),
                                            float f => f.ToString("0.##"),
                                            decimal mval => mval.ToString("0.##"),
                                            DateTime dt => dt.ToLocalTime().ToString("g"),
                                            _ => metric.Value?.ToString() ?? "-"
                                        };
                                        <div class="col-md-4">
                                            <div class="border rounded-3 p-3 h-100">
                                                <div class="text-muted text-uppercase small mb-1">@metric.Key</div>
                                                <div class="fw-semibold">@metricValue</div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-light border mb-0">
                                    @LocalizationService.GetString("NoMetricsAvailable")
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="location-tab-pane" role="tabpanel" aria-labelledby="location-tab">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">@LocalizationService.GetString("LocationHistory")</h5>
                            <span class="badge bg-secondary-subtle text-secondary">@Model.LocationHistory.Count</span>
                        </div>
                        <div class="card-body p-0">
                            @if (Model.LocationHistory.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped mb-0">
                                        <thead>
                                            <tr>
                                                <th>@LocalizationService.GetString("RecordedAt")</th>
                                                <th>@LocalizationService.GetString("Location")</th>
                                                <th>@LocalizationService.GetString("Accuracy")</th>
                                                <th>@LocalizationService.GetString("Status")</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var history in Model.LocationHistory.OrderByDescending(h => h.RecordedAt).Take(100))
                                            {
                                                <tr>
                                                    <td>@history.RecordedAt.ToLocalTime().ToString("g")</td>
                                                    <td>
                                                        @string.Format("{0:F5}, {1:F5}", history.Latitude, history.Longitude)<br />
                                                        <span class="text-muted small">@history.Address</span>
                                                    </td>
                                                    <td>
                                                        @if (history.Accuracy.HasValue)
                                                        {
                                                            @history.Accuracy.Value.ToString("0.##") <span class="text-muted">m</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                    </td>
                                                    <td>@history.UpdateTypeDisplayName</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="p-4 text-center text-muted">
                                    @LocalizationService.GetString("NoLocationHistory")
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="eta-tab-pane" role="tabpanel" aria-labelledby="eta-tab">
                    <div class="row g-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">@LocalizationService.GetString("CurrentEta")</h5>
                                </div>
                                <div class="card-body">
                                    @if (Model.CurrentEta != null)
                                    {
                                        var eta = Model.CurrentEta;
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="text-muted small">@LocalizationService.GetString("EstimatedArrival")</div>
                                                <div class="fw-semibold">
                                                    @eta.EstimatedArrivalTime.ToLocalTime().ToString("f")
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="text-muted small">@LocalizationService.GetString("MinutesRemaining")</div>
                                                <div class="fw-semibold">@eta.EstimatedMinutesRemaining</div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="text-muted small">@LocalizationService.GetString("EtaDistanceRemaining")</div>
                                                <div class="fw-semibold">
                                                    @(eta.DistanceRemaining?.ToString("0.##") ?? "-") km
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-md-4">
                                                <div class="text-muted small">@LocalizationService.GetString("EtaAverageSpeed")</div>
                                                <div class="fw-semibold">
                                                    @(eta.AverageSpeed?.ToString("0.##") ?? "-") km/h
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="text-muted small">@LocalizationService.GetString("EtaConfidence")</div>
                                                <div class="fw-semibold">
                                                    @(eta.Confidence.HasValue ? $"{eta.Confidence:P0}" : "-")
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="text-muted small">@LocalizationService.GetString("Status")</div>
                                                <span class="badge @(eta.IsActive ? "bg-success-subtle text-success" : "bg-secondary-subtle text-secondary")">
                                                    @(eta.IsActive
                                                        ? LocalizationService.GetString("EtaStatusActive")
                                                        : LocalizationService.GetString("EtaStatusInactive"))
                                                </span>
                                            </div>
                                        </div>
                                        @if (!string.IsNullOrWhiteSpace(eta.Notes))
                                        {
                                            <div class="alert alert-info mt-3 mb-0">
                                                <strong>@LocalizationService.GetString("EtaNotes")</strong><br />
                                                @eta.Notes
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="text-center text-muted py-3">
                                            @LocalizationService.GetString("NoEtaData")
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">@LocalizationService.GetString("EtaHistory")</h5>
                                </div>
                                <div class="card-body p-0">
                                    @if (Model.EtaHistory.Any())
                                    {
                                        <div class="table-responsive">
                                            <table class="table table-striped mb-0">
                                                <thead>
                                                    <tr>
                                                        <th>@LocalizationService.GetString("EstimatedArrival")</th>
                                                        <th>@LocalizationService.GetString("MinutesRemaining")</th>
                                                        <th>@LocalizationService.GetString("EtaDistanceRemaining")</th>
                                                        <th>@LocalizationService.GetString("EtaAverageSpeed")</th>
                                                        <th>@LocalizationService.GetString("EtaConfidence")</th>
                                                        <th>@LocalizationService.GetString("RecordedAt")</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var eta in Model.EtaHistory.OrderByDescending(e => e.CreatedAt).Take(100))
                                                    {
                                                        <tr>
                                                            <td>@eta.EstimatedArrivalTime.ToLocalTime().ToString("g")</td>
                                                            <td>@eta.EstimatedMinutesRemaining</td>
                                                            <td>@(eta.DistanceRemaining?.ToString("0.##") ?? "-") km</td>
                                                            <td>@(eta.AverageSpeed?.ToString("0.##") ?? "-") km/h</td>
                                                            <td>@(eta.Confidence.HasValue ? $"{eta.Confidence:P0}" : "-")</td>
                                                            <td>@eta.CreatedAt.ToLocalTime().ToString("g")</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="p-4 text-center text-muted">
                                            @LocalizationService.GetString("NoEtaHistory")
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="notifications-tab-pane" role="tabpanel" aria-labelledby="notifications-tab">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">@LocalizationService.GetString("RecentNotifications")</h5>
                        </div>
                        <div class="card-body p-0">
                            @if (Model.Notifications.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped mb-0">
                                        <thead>
                                            <tr>
                                                <th>@LocalizationService.GetString("Title")</th>
                                                <th>@LocalizationService.GetString("Type")</th>
                                                <th>@LocalizationService.GetString("SentAt")</th>
                                                <th>@LocalizationService.GetString("Status")</th>
                                                <th class="text-end">@LocalizationService.GetString("Actions")</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var notification in Model.Notifications.OrderByDescending(n => n.CreatedAt))
                                            {
                                                <tr>
                                                    <td>@notification.Title</td>
                                                    <td>@notification.TypeDisplayName</td>
                                                    <td>@notification.CreatedAt.ToLocalTime().ToString("g")</td>
                                                    <td>
                                                        @if (notification.IsRead)
                                                        {
                                                            <span class="badge bg-success-subtle text-success">@LocalizationService.GetString("Read")</span>
                                                        }
                                                        else if (notification.IsSent)
                                                        {
                                                            <span class="badge bg-info-subtle text-info">@LocalizationService.GetString("Sent")</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-warning-subtle text-warning">@LocalizationService.GetString("Pending")</span>
                                                        }
                                                    </td>
                                                    <td class="text-end">
                                                        <div class="d-inline-flex gap-2">
                                                            @if (!notification.IsRead)
                                                            {
                                                                <form asp-action="MarkNotificationRead" method="post" class="d-inline">
                                                                    @Html.AntiForgeryToken()
                                                                    <input type="hidden" name="notificationId" value="@notification.Id" />
                                                                    <input type="hidden" name="trackingId" value="@tracking.Id" />
                                                                    <button type="submit" class="btn btn-sm btn-outline-primary">
                                                                        @LocalizationService.GetString("MarkAsRead")
                                                                    </button>
                                                                </form>
                                                            }
                                                            <form asp-action="DeleteNotification" method="post" class="d-inline">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="notificationId" value="@notification.Id" />
                                                                <input type="hidden" name="trackingId" value="@tracking.Id" />
                                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                                    @LocalizationService.GetString("Delete")
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="p-4 text-center text-muted">
                                    @LocalizationService.GetString("NoNotifications")
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="settings-tab-pane" role="tabpanel" aria-labelledby="settings-tab">
                    <div class="row g-4">
                        <div class="col-12">
                            <div class="card h-100">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h5 class="card-title mb-0">@LocalizationService.GetString("MerchantSettings")</h5>
                                    @if (Model.MerchantSettings != null)
                                    {
                                        <span class="badge bg-secondary-subtle text-secondary">
                                            @LocalizationService.GetString("LastUpdated"):
                                            @Model.MerchantSettings.UpdatedAt?.ToLocalTime().ToString("g")
                                        </span>
                                    }
                                </div>
                                <div class="card-body">
                                    <form asp-action="SaveMerchantSettings" method="post" class="row g-3">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="trackingId" value="@tracking.Id" />
                                        <input type="hidden" name="isUpdate" value="@(Model.MerchantSettings != null)" />
                                        <div class="col-md-4 form-check form-switch">
                                            <input asp-for="MerchantSettingsForm.EnableLocationTracking" class="form-check-input" />
                                            <label class="form-check-label" asp-for="MerchantSettingsForm.EnableLocationTracking">
                                                @LocalizationService.GetString("EnableLocationTracking")
                                            </label>
                                        </div>
                                        <div class="col-md-4 form-check form-switch">
                                            <input asp-for="MerchantSettingsForm.EnablePushNotifications" class="form-check-input" />
                                            <label class="form-check-label" asp-for="MerchantSettingsForm.EnablePushNotifications">
                                                @LocalizationService.GetString("EnablePushNotifications")
                                            </label>
                                        </div>
                                        <div class="col-md-4 form-check form-switch">
                                            <input asp-for="MerchantSettingsForm.EnableSMSNotifications" class="form-check-input" />
                                            <label class="form-check-label" asp-for="MerchantSettingsForm.EnableSMSNotifications">
                                                @LocalizationService.GetString("EnableSMSNotifications")
                                            </label>
                                        </div>
                                        <div class="col-md-4 form-check form-switch">
                                            <input asp-for="MerchantSettingsForm.EnableEmailNotifications" class="form-check-input" />
                                            <label class="form-check-label" asp-for="MerchantSettingsForm.EnableEmailNotifications">
                                                @LocalizationService.GetString("EnableEmailNotifications")
                                            </label>
                                        </div>
                                        <div class="col-md-4">
                                            <label class="form-label" asp-for="MerchantSettingsForm.LocationUpdateInterval">
                                                @LocalizationService.GetString("LocationUpdateInterval")
                                            </label>
                                            <input asp-for="MerchantSettingsForm.LocationUpdateInterval" class="form-control" type="number" min="1" />
                                            <div class="form-text">@LocalizationService.GetString("LocationUpdateIntervalMinutes")</div>
                                        </div>
                                        <div class="col-md-4">
                                            <label class="form-label" asp-for="MerchantSettingsForm.NotificationInterval">
                                                @LocalizationService.GetString("NotificationInterval")
                                            </label>
                                            <input asp-for="MerchantSettingsForm.NotificationInterval" class="form-control" type="number" min="1" />
                                            <div class="form-text">@LocalizationService.GetString("NotificationIntervalMinutes")</div>
                                        </div>
