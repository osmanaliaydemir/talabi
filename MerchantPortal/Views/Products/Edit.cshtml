@inject ILocalizationService LocalizationService
@model Getir.MerchantPortal.Models.UpdateProductRequest
@{
    ViewData["Title"] = LocalizationService.GetString("EditProduct");
    var categories = ViewBag.Categories as List<Getir.MerchantPortal.Models.ProductCategoryResponse> ?? new();
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="stat-card">
            <h4 class="mb-4">
                <i class="fas fa-edit"></i> @LocalizationService.GetString("EditProduct")
            </h4>

            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label">@LocalizationService.GetString("ProductName") *</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ProductCategoryId" class="form-label">@LocalizationService.GetString("Category")</label>
                        <select asp-for="ProductCategoryId" class="form-select">
                            <option value="">@LocalizationService.GetString("SelectCategory")</option>
                            @foreach (var category in categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        </select>
                        <span asp-validation-for="ProductCategoryId" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">@LocalizationService.GetString("Description")</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Price" class="form-label">@LocalizationService.GetString("Price") (₺) *</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="DiscountedPrice" class="form-label">@LocalizationService.GetString("DiscountedPrice") (₺)</label>
                        <input asp-for="DiscountedPrice" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="DiscountedPrice" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="StockQuantity" class="form-label">@LocalizationService.GetString("StockAmount") *</label>
                        <input asp-for="StockQuantity" type="number" class="form-control" />
                        <span asp-validation-for="StockQuantity" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Unit" class="form-label">@LocalizationService.GetString("Unit")</label>
                        <input asp-for="Unit" class="form-control" />
                        <span asp-validation-for="Unit" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="DisplayOrder" class="form-label">@LocalizationService.GetString("Order")</label>
                        <input asp-for="DisplayOrder" type="number" class="form-control" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label">@LocalizationService.GetString("Image") URL</label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <div class="mt-2">
                        <label class="form-label">@LocalizationService.GetString("UploadImage")</label>
                        <input type="file" name="imageFile" id="imageFileInput" class="form-control" accept="image/*" />
                        <div id="imagePreview" class="mt-2" style="display:none;">
                            <img id="imagePreviewImg" src="#" alt="preview" style="max-height:120px;border:1px solid #eee;border-radius:6px;padding:4px;" />
                            <button type="button" id="btnRemoveImage" class="btn btn-sm btn-outline-danger ms-2">@LocalizationService.GetString("Remove")</button>
                            <small id="imageValidationMsg" class="text-danger d-block mt-1" style="display:none;"></small>
                        </div>
                    </div>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
                            <label asp-for="IsAvailable" class="form-check-label">@LocalizationService.GetString("InStock")</label>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">@LocalizationService.GetString("Active")</label>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> @LocalizationService.GetString("Back")
                    </a>
                    <button type="submit" class="btn btn-getir">
                        <i class="fas fa-save"></i> @LocalizationService.GetString("Save")
                    </button>
                </div>

                <div class="mt-3 d-flex gap-2">
                    <a class="btn btn-outline-primary" href="@Url.Action("Index","ProductVariants", new { productId = Context.Request.RouteValues["id"] })">
                        <i class="fas fa-layer-group"></i> @LocalizationService.GetString("Variants")
                    </a>
                    <a class="btn btn-outline-secondary" href="@Url.Action("Groups","ProductOptions", new { productId = Context.Request.RouteValues["id"] })">
                        <i class="fas fa-sliders"></i> @LocalizationService.GetString("Options")
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function(){
            const input = document.getElementById('imageFileInput');
            const preview = document.getElementById('imagePreview');
            const img = document.getElementById('imagePreviewImg');
            const removeBtn = document.getElementById('btnRemoveImage');
            const msg = document.getElementById('imageValidationMsg');
            const maxSize = 5 * 1024 * 1024; // 5MB
            const types = ['image/jpeg','image/png','image/webp','image/jpg'];
            if(!input) return;
            input.addEventListener('change', function(){
                msg.style.display = 'none';
                if(!input.files || input.files.length === 0){ preview.style.display = 'none'; return; }
                const f = input.files[0];
                if(f.size > maxSize){ msg.textContent = 'Dosya boyutu 5MB üzeri'; msg.style.display=''; input.value=''; preview.style.display='none'; return; }
                if(!types.includes(f.type)){ msg.textContent = 'Geçersiz dosya türü'; msg.style.display=''; input.value=''; preview.style.display='none'; return; }
                const url = URL.createObjectURL(f);
                img.src = url; preview.style.display = '';
            });
            removeBtn?.addEventListener('click', function(){ input.value=''; preview.style.display='none'; });
        })();
    </script>
}

