@inject ILocalizationService LocalizationService
@model Getir.MerchantPortal.Models.PagedResult<Getir.MerchantPortal.Models.CouponResponse>

<div class="d-flex justify-content-between align-items-center mb-4">
	<h3>@LocalizationService.GetString("Coupons")</h3>
	<a class="btn btn-primary" href="@Url.Action("Create")"><i class="fas fa-plus me-1"></i> @LocalizationService.GetString("Add")</a>
</div>

@if (Model != null && Model.Items.Any())
{
	<table class="table table-striped">
		<thead>
			<tr>
				<th>@LocalizationService.GetString("Code")</th>
				<th>@LocalizationService.GetString("Description")</th>
				<th>@LocalizationService.GetString("Discount")</th>
				<th>@LocalizationService.GetString("Usage")</th>
				<th>@LocalizationService.GetString("Active")</th>
			</tr>
		</thead>
		<tbody>
		@foreach (var c in Model.Items)
		{
			<tr>
				<td>@c.Code</td>
				<td>@c.Description</td>
				<td>@c.DiscountType @c.DiscountValue</td>
				<td>@c.UsedCount / @c.UsageLimit</td>
				<td>@(c.IsActive ? "Evet" : "HayÄ±r")</td>
			</tr>
		}
		</tbody>
	</table>
}
else
{
	<div class="alert alert-info">@LocalizationService.GetString("NoData")</div>
}


