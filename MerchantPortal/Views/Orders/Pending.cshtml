@inject ILocalizationService LocalizationService
@model List<Getir.MerchantPortal.Models.OrderResponse>
@{
    ViewData["Title"] = LocalizationService.GetString("PendingOrders");
}

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard-modern.css" />
    <link rel="stylesheet" href="~/css/modules/orders/orders.css" asp-append-version="true" />
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4 fade-in">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-clock me-2" style="background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>
            @LocalizationService.GetString("PendingOrders")
        </h2>
        <p class="text-muted mb-0">@LocalizationService.GetString("PendingOrdersDesc")</p>
    </div>
    <div class="d-flex gap-2">
        @if (Model != null && Model.Any())
        {
            <button class="btn btn-success" onclick="confirmAllOrders()">
                <i class="fas fa-check-double me-2"></i>@LocalizationService.GetString("ConfirmAll")
            </button>
        }
        <a href="@Url.Action("Index")" class="btn btn-outline-primary">
            <i class="fas fa-list me-2"></i>@LocalizationService.GetString("ViewAll")
        </a>
    </div>
</div>

<!-- Stats Card -->
@if (Model != null && Model.Any())
{
    <div class="row g-3 mb-4 fade-in" style="animation-delay: 0.1s;">
        <div class="col-md-3">
            <div class="stats-card-mini">
                <span class="value" style="color: #fbbf24;">@Model.Count</span>
                <span class="label">@LocalizationService.GetString("TotalReviewsCount")</span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card-mini">
                <span class="value" style="color: #10b981;">₺@Model.Sum(o => o.TotalAmount).ToString("N2")</span>
                <span class="label">@LocalizationService.GetString("Total")</span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card-mini">
                <span class="value" style="color: #8b5cf6;">@Model.Count(o => !string.IsNullOrEmpty(o.Notes))</span>
                <span class="label">@LocalizationService.GetString("HasNote")</span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card-mini">
                <span class="value" style="color: #06b6d4;">@Model.Average(o => o.TotalAmount).ToString("N2") ₺</span>
                <span class="label">@LocalizationService.GetString("AverageScore")</span>
            </div>
        </div>
    </div>

    <!-- Pending Orders List -->
    var delay = 0.2;
    foreach (var order in Model.OrderBy(o => o.CreatedAt))
    {
        delay += 0.05;
        <div class="order-card pending mb-3 fade-in" style="animation-delay: @(delay)s; border-left: 4px solid #fbbf24;">
            <div class="order-header">
                <div>
                    <div class="order-number">#@order.OrderNumber</div>
                    <div class="order-time">
                        <i class="far fa-clock"></i>
                        @order.CreatedAt.ToString("dd MMM yyyy, HH:mm")
                    </div>
                </div>
                <span class="badge-modern warning pulse">
                    <i class="fas fa-circle" style="font-size: 0.5rem;"></i>
                    @LocalizationService.GetString("Pending")
                </span>
            </div>
            
            <div class="customer-info">
                <div class="customer-avatar" style="background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);">
                    @(order.CustomerName.Substring(0, 1).ToUpper())
                </div>
                <div class="customer-details flex-grow-1">
                    <h6>@order.CustomerName</h6>
                    <small>
                        <i class="fas fa-phone me-1"></i>@order.CustomerPhone
                    </small>
                </div>
                <div class="text-end">
                    <div class="order-amount">₺@order.TotalAmount.ToString("N2")</div>
                    <small class="text-muted">
                        <i class="fas fa-clock me-1"></i>
                        @((DateTime.Now - order.CreatedAt).TotalMinutes.ToString("0")) @LocalizationService.GetString("MinutesAgo")
                    </small>
                </div>
            </div>
            
            <div class="mb-3">
                <div class="d-flex align-items-start gap-2">
                    <i class="fas fa-map-marker-alt mt-1 text-muted"></i>
                    <small class="text-muted">@order.DeliveryAddress</small>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(order.Notes))
            {
                <div class="alert alert-warning mb-3" style="background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%); border: none;">
                    <strong><i class="fas fa-sticky-note me-1"></i> @LocalizationService.GetString("Note"):</strong>
                    <p class="mb-0 mt-1">@order.Notes</p>
                </div>
            }
            
            <div class="order-footer">
                <div class="d-flex gap-2">
                    <small class="badge bg-light text-dark">
                        <i class="fas fa-calendar me-1"></i>
                        @order.CreatedAt.ToString("HH:mm")
                    </small>
                </div>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("Details", new { id = order.Id })" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-eye me-1"></i> @LocalizationService.GetString("Details")
                    </a>
                    <form asp-action="UpdateStatus" asp-route-id="@order.Id" method="post" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="status" value="Confirmed" />
                        <button type="submit" class="btn btn-sm" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white;">
                            <i class="fas fa-check me-1"></i> @LocalizationService.GetString("ConfirmOrder")
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="text-center py-5 fade-in">
        <div class="chart-container-modern" style="max-width: 500px; margin: 0 auto;">
            <i class="fas fa-clock fa-5x text-muted mb-4" style="opacity: 0.3;"></i>
            <h4 class="mb-3">@LocalizationService.GetString("NoPendingOrders")</h4>
            <p class="text-muted">@LocalizationService.GetString("AllOrdersProcessed")</p>
            <p class="text-muted small">@LocalizationService.GetString("NewOrdersWillAppear")</p>
            <a href="@Url.Action("Index")" class="btn btn-primary mt-3">
                <i class="fas fa-list me-2"></i>@LocalizationService.GetString("ViewAll")
            </a>
        </div>
    </div>
}

@section Scripts {
    <script>
        function confirmAllOrders() {
            if (confirm('@LocalizationService.GetString("ConfirmAllOrdersQuestion")')) {
                // TODO: Implement bulk confirm
                alert('@LocalizationService.GetString("BulkConfirmComingSoon")');
            }
        }

        // Auto refresh every 30 seconds for new orders
        setInterval(function() {
            location.reload();
        }, 30000);
    </script>
}

<style>
    .pulse {
        animation: pulse 2s infinite;
    }
    
    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: 0.7;
        }
    }
</style>
