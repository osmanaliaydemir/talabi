@inject ILocalizationService LocalizationService
@using Getir.MerchantPortal.Services
@using System.Globalization
@{
    ViewData["Title"] = LocalizationService.GetString("AccessDenied");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center py-5">
                    <!-- Error Icon -->
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle fa-5x text-warning"></i>
                    </div>
                    
                    <!-- Error Title -->
                    <h1 class="h3 mb-3 text-gray-800">@LocalizationService.GetString("AccessDenied")</h1>
                    
                    <!-- Error Message -->
                    <p class="text-gray-600 mb-4">
                        @LocalizationService.GetString("AccessDeniedMessage")
                    </p>
                    
                    <!-- Error Code -->
                    <div class="mb-4">
                        <span class="badge bg-danger fs-6">@LocalizationService.GetString("ErrorCode"): 403</span>
                    </div>
                    
                    <!-- Action Buttons -->
                    <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                        <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>@LocalizationService.GetString("GoToHomepage")
                        </a>
                        <a href="@Url.Action("Login", "Auth")" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-in-alt me-2"></i>@LocalizationService.GetString("LoginAgain")
                        </a>
                        <button onclick="history.back()" class="btn btn-outline-info">
                            <i class="fas fa-arrow-left me-2"></i>@LocalizationService.GetString("GoBack")
                        </button>
                    </div>
                    
                    <!-- Language Switcher -->
                    <div class="mt-3">
                        <div class="btn-group" role="group">
                            <a href="@Url.Action("SetLanguage", "Language", new { culture = "tr-TR", returnUrl = Context.Request.Path })" 
                               class="btn btn-sm btn-outline-primary @(CultureInfo.CurrentCulture.Name == "tr-TR" ? "active" : "")">
                                ðŸ‡¹ðŸ‡· TÃ¼rkÃ§e
                            </a>
                            <a href="@Url.Action("SetLanguage", "Language", new { culture = "en-US", returnUrl = Context.Request.Path })" 
                               class="btn btn-sm btn-outline-primary @(CultureInfo.CurrentCulture.Name == "en-US" ? "active" : "")">
                                ðŸ‡ºðŸ‡¸ English
                            </a>
                            <a href="@Url.Action("SetLanguage", "Language", new { culture = "ar-SA", returnUrl = Context.Request.Path })" 
                               class="btn btn-sm btn-outline-primary @(CultureInfo.CurrentCulture.Name == "ar-SA" ? "active" : "")">
                                ðŸ‡¸ðŸ‡¦ Ø§Ù„Ø¹Ø±Ø¨ÙŠØ©
                            </a>
                        </div>
                    </div>
                    
                    <!-- Help Text -->
                    <div class="mt-4">
                        <small class="text-muted">
                            @LocalizationService.GetString("ContactSupport") <a href="mailto:support@getir.com" class="text-decoration-none">@LocalizationService.GetString("SupportTeam")</a> @LocalizationService.GetString("ContactUs")
                        </small>
                    </div>
                </div>
            </div>
            
            <!-- Additional Info Card -->
            <div class="card shadow mt-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle me-2"></i>@LocalizationService.GetString("WhyThisError")
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            @LocalizationService.GetString("NoPermission")
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            @LocalizationService.GetString("SessionExpired")
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            @LocalizationService.GetString("AccountRestricted")
                        </li>
                        <li class="mb-0">
                            <i class="fas fa-check text-success me-2"></i>
                            @LocalizationService.GetString("MaintenanceMode")
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto redirect after 30 seconds
        setTimeout(function() {
            window.location.href = '@Url.Action("Index", "Dashboard")';
        }, 30000);
        
        // Show countdown
        let countdown = 30;
        const countdownElement = document.createElement('div');
        countdownElement.className = 'mt-3 text-muted';
        countdownElement.innerHTML = `<small>${countdown} @LocalizationService.GetString("RedirectCountdown")</small>`;
        document.querySelector('.card-body').appendChild(countdownElement);
        
        const timer = setInterval(function() {
            countdown--;
            countdownElement.innerHTML = `<small>${countdown} @LocalizationService.GetString("RedirectCountdown")</small>`;
            
            if (countdown <= 0) {
                clearInterval(timer);
            }
        }, 1000);
    </script>
}
