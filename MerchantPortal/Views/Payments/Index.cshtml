@inject ILocalizationService LocalizationService
@{
    ViewData["Title"] = LocalizationService.GetString("PaymentHistory");
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.bootstrap5.min.css" />
    <style>
        .payment-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }
        .filter-section {
            background: #f8f9fa;
            padding: 1.5rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }
        .stat-badge {
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 600;
            margin-right: 1rem;
        }
        .stat-badge.success {
            background: #d4edda;
            color: #155724;
        }
        .stat-badge.warning {
            background: #fff3cd;
            color: #856404;
        }
        .stat-badge.info {
            background: #d1ecf1;
            color: #0c5460;
        }
    </style>
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="fas fa-money-bill-wave me-2"></i>@LocalizationService.GetString("PaymentHistory")</h2>
        <p class="text-muted mb-0">@LocalizationService.GetString("ViewAndReportPayments")</p>
    </div>
    <div>
        <a href="/Payments/Reports" class="btn btn-primary me-2">
            <i class="fas fa-chart-line me-1"></i> @LocalizationService.GetString("Reports")
        </a>
        <a href="/Payments/Settlements" class="btn btn-outline-primary">
            <i class="fas fa-file-invoice-dollar me-1"></i> @LocalizationService.GetString("Settlements")
        </a>
    </div>
</div>

<!-- Stats Summary -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="payment-card">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-success text-white me-3">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div>
                    <div class="small text-muted">@LocalizationService.GetString("Completed")</div>
                    <div class="h4 mb-0" id="completedCount">-</div>
            </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="payment-card">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-warning text-white me-3">
                    <i class="fas fa-clock"></i>
                </div>
                <div>
                    <div class="small text-muted">@LocalizationService.GetString("Pending")</div>
                    <div class="h4 mb-0" id="pendingCount">-</div>
            </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="payment-card">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-primary text-white me-3">
                    <i class="fas fa-lira-sign"></i>
                </div>
                <div>
                    <div class="small text-muted">@LocalizationService.GetString("TotalTurnover")</div>
                    <div class="h4 mb-0" id="totalRevenue">₺0</div>
            </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="payment-card">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-info text-white me-3">
                    <i class="fas fa-calculator"></i>
                </div>
                <div>
                    <div class="small text-muted">@LocalizationService.GetString("AverageAmount")</div>
                    <div class="h4 mb-0" id="avgAmount">₺0</div>
            </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="payment-card">
    <div class="filter-section">
        <h5 class="mb-3"><i class="fas fa-filter me-2"></i>@LocalizationService.GetString("Filters")</h5>
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label">@LocalizationService.GetString("StartDate")</label>
                <input type="date" class="form-control" id="startDate" />
            </div>
            <div class="col-md-3">
                <label class="form-label">@LocalizationService.GetString("EndDate")</label>
                <input type="date" class="form-control" id="endDate" />
                    </div>
            <div class="col-md-2">
                <label class="form-label">@LocalizationService.GetString("PaymentMethod")</label>
                <select class="form-select" id="paymentMethod">
                    <option value="">@LocalizationService.GetString("All")</option>
                    <option value="Cash">@LocalizationService.GetString("Cash")</option>
                    <option value="CreditCard">@LocalizationService.GetString("CreditCard")</option>
                    <option value="VodafonePay">@LocalizationService.GetString("VodafonePay")</option>
                    <option value="BankTransfer">@LocalizationService.GetString("BankTransfer")</option>
                </select>
                </div>
            <div class="col-md-2">
                <label class="form-label">@LocalizationService.GetString("Status")</label>
                <select class="form-select" id="status">
                    <option value="">@LocalizationService.GetString("All")</option>
                    <option value="Completed">@LocalizationService.GetString("Completed")</option>
                    <option value="Pending">@LocalizationService.GetString("Pending")</option>
                    <option value="Failed">@LocalizationService.GetString("Failed")</option>
                </select>
                    </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <button class="btn btn-primary w-100" onclick="applyFilters()">
                    <i class="fas fa-search me-1"></i> @LocalizationService.GetString("Filter")
                </button>
            </div>
        </div>
    </div>

    <!-- Export Buttons -->
    <div class="d-flex justify-content-end gap-2 mt-3">
        <button class="btn btn-success btn-sm" onclick="exportToExcel()">
            <i class="fas fa-file-excel me-1"></i> @LocalizationService.GetString("DownloadExcel")
        </button>
        <button class="btn btn-danger btn-sm" onclick="exportToPdf()">
            <i class="fas fa-file-pdf me-1"></i> @LocalizationService.GetString("DownloadPDF")
        </button>
    </div>
</div>

<!-- Payment History Table -->
<div class="payment-card">
    <h5 class="mb-3"><i class="fas fa-list me-2"></i>@LocalizationService.GetString("PaymentsList")</h5>
    <div class="table-responsive">
        <table id="paymentsTable" class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>@LocalizationService.GetString("OrderNumber")</th>
                    <th>@LocalizationService.GetString("Customer")</th>
                    <th>@LocalizationService.GetString("PaymentMethod")</th>
                    <th>@LocalizationService.GetString("Amount")</th>
                    <th>@LocalizationService.GetString("Status")</th>
                    <th>@LocalizationService.GetString("CreatedAtHeader")</th>
                    <th>@LocalizationService.GetString("CompletedAtHeader")</th>
                    <th>@LocalizationService.GetString("Action")</th>
                </tr>
            </thead>
            <tbody>
                <!-- DataTables will populate -->
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.bootstrap5.min.js"></script>
    <script src="~/js/modules/payments/payments.js" asp-append-version="true"></script>
}
