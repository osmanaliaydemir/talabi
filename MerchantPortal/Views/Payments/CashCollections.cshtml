@inject ILocalizationService LocalizationService
@model Getir.MerchantPortal.Models.CashCollectionsViewModel

@{
    ViewData["Title"] = "Nakit Tahsilatlar";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">Nakit Tahsilatlar</h3>
    <a class="btn btn-secondary" href="@Url.Action("Index")">
        <i class="fas fa-arrow-left me-1"></i> @LocalizationService.GetString("Back")
    </a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form class="row gy-2 gx-3 align-items-end" method="get">
            <div class="col-md-4">
                <label class="form-label">Durum</label>
                <select class="form-select" name="status">
                    <option value="">Tümü</option>
                    <option value="Pending" selected="@(Model.Status?.Equals("Pending", StringComparison.OrdinalIgnoreCase) ?? false)">Bekliyor</option>
                    <option value="Completed" selected="@(Model.Status?.Equals("Completed", StringComparison.OrdinalIgnoreCase) ?? false)">Tamamlandı</option>
                    <option value="Failed" selected="@(Model.Status?.Equals("Failed", StringComparison.OrdinalIgnoreCase) ?? false)">Başarısız</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">@LocalizationService.GetString("Actions")</label>
                <div>
                    <button type="submit" class="btn btn-primary me-2">@LocalizationService.GetString("Filter")</button>
                    <a class="btn btn-outline-secondary" href="@Url.Action("CashCollections")">@LocalizationService.GetString("Reset")</a>
                </div>
            </div>
        </form>
    </div>
</div>

@if (!Model.Collections.Items.Any())
{
    <div class="alert alert-info">Kriterlere uygun kayıt bulunamadı.</div>
}
else
{
    <div class="table-responsive mb-4">
        <table class="table table-striped align-middle">
            <thead class="table-light">
                <tr>
                    <th>Ödeme ID</th>
                    <th>Mağaza</th>
                    <th>Tutar</th>
                    <th>Müşteri</th>
                    <th>Yöntem</th>
                    <th>Durum</th>
                    <th>Oluşturulma</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var payment in Model.Collections.Items)
            {
                <tr>
                    <td>@payment.Id</td>
                    <td>@payment.OrderNumber</td>
                    <td>@payment.Amount.ToString("C")</td>
                    <td>@payment.CollectedByCourierName</td>
                    <td>@payment.PaymentMethod</td>
                    <td>@payment.Status</td>
                    <td>@payment.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}

<div class="card">
    <div class="card-header">
        Mutabakat İşle
    </div>
    <div class="card-body">
        <form asp-action="ProcessSettlement" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Settlement.ReturnStatus" value="@Model.Status" />
            <input type="hidden" asp-for="Settlement.ReturnPage" value="@Model.Page" />

            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="Settlement.MerchantId" class="form-label"></label>
                    <input asp-for="Settlement.MerchantId" class="form-control" />
                    <span asp-validation-for="Settlement.MerchantId" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Settlement.CommissionRate" class="form-label"></label>
                    <input asp-for="Settlement.CommissionRate" class="form-control" />
                    <span asp-validation-for="Settlement.CommissionRate" class="text-danger"></span>
                </div>
                <div class="col-md-5">
                    <label asp-for="Settlement.BankTransferReference" class="form-label"></label>
                    <input asp-for="Settlement.BankTransferReference" class="form-control" />
                    <span asp-validation-for="Settlement.BankTransferReference" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <label asp-for="Settlement.Notes" class="form-label"></label>
                    <textarea asp-for="Settlement.Notes" class="form-control" rows="2"></textarea>
                </div>
            </div>

            <div class="text-end mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-check me-1"></i> İşlemi Tamamla
                </button>
            </div>
        </form>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />

