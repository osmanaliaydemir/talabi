@inject ILocalizationService LocalizationService
@model Getir.MerchantPortal.Models.PagedResult<Getir.MerchantPortal.Models.CampaignResponse>

<div class="d-flex justify-content-between align-items-center mb-4">
	<h3>@LocalizationService.GetString("Campaigns")</h3>
</div>

@if (Model != null && Model.Items.Any())
{
	<table class="table table-striped">
		<thead>
			<tr>
				<th>@LocalizationService.GetString("Title")</th>
				<th>@LocalizationService.GetString("StartDate")</th>
				<th>@LocalizationService.GetString("EndDate")</th>
				<th>@LocalizationService.GetString("Active")</th>
			</tr>
		</thead>
		<tbody>
		@foreach (var c in Model.Items)
		{
			<tr>
				<td>@c.Title</td>
				<td>@c.StartDate.ToString("yyyy-MM-dd")</td>
				<td>@c.EndDate.ToString("yyyy-MM-dd")</td>
				<td>@(c.IsActive ? "Evet" : "HayÄ±r")</td>
			</tr>
		}
		</tbody>
	</table>
}
else
{
	<div class="alert alert-info">@LocalizationService.GetString("NoData")</div>
}


