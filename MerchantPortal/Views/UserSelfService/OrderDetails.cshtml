@model Getir.MerchantPortal.Models.UserOrderDetailViewModel
@inject ILocalizationService LocalizationService

@{
    ViewData["Title"] = LocalizationService.GetString("OrderDetails");
}

<div class="page-header d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="page-title">@LocalizationService.GetString("OrderDetails")</h1>
        @if (Model.Order != null)
        {
            <p class="text-muted mb-0">@string.Format(LocalizationService.GetString("OrderNumberLabel"), Model.Order.OrderNumber)</p>
        }
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> @LocalizationService.GetString("Back")
        </a>
    </div>
</div>

@if (TempData["Success"] is string successMessage)
{
    <div class="alert alert-success">@successMessage</div>
}
@if (TempData["Error"] is string errorMessage)
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (Model.Order == null)
{
    <div class="alert alert-warning">@LocalizationService.GetString("OrderNotFound")</div>
}
else
{
    <div class="row g-4">
        <div class="col-xl-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">@LocalizationService.GetString("OrderSummary")</h5>
                    <span class="badge bg-primary-subtle text-primary">@LocalizationService.GetString(Model.Order.Status)</span>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">@LocalizationService.GetString("Merchant")</dt>
                        <dd class="col-sm-9">@Model.Order.MerchantName</dd>
                        <dt class="col-sm-3">@LocalizationService.GetString("DeliveryAddress")</dt>
                        <dd class="col-sm-9">@Model.Order.DeliveryAddress</dd>
                        <dt class="col-sm-3">@LocalizationService.GetString("Total")</dt>
                        <dd class="col-sm-9 fw-semibold">@Model.Order.Total.ToString("C2")</dd>
                    </dl>
                    <hr />
                    <h6 class="mb-3">@LocalizationService.GetString("OrderItems")</h6>
                    <div class="table-responsive">
                        <table class="table table-sm align-middle">
                            <thead>
                                <tr>
                                    <th>@LocalizationService.GetString("Product")</th>
                                    <th>@LocalizationService.GetString("Quantity")</th>
                                    <th>@LocalizationService.GetString("UnitPrice")</th>
                                    <th>@LocalizationService.GetString("Total")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Order.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="fw-semibold">@item.ProductName</div>
                                            @if (!string.IsNullOrWhiteSpace(item.VariantName))
                                            {
                                                <div class="text-muted small">@item.VariantName</div>
                                            }
                                            @if (item.Options.Any())
                                            {
                                                <ul class="text-muted small ps-3 mb-0">
                                                    @foreach (var opt in item.Options)
                                                    {
                                                        <li>@opt.OptionName (@opt.ExtraPrice.ToString("C2"))</li>
                                                    }
                                                </ul>
                                            }
                                        </td>
                                        <td>@item.Quantity</td>
                                        <td>@item.UnitPrice.ToString("C2")</td>
                                        <td>@item.TotalPrice.ToString("C2")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">@LocalizationService.GetString("OrderActions")</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CancelOrder" method="post" class="mb-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="orderId" value="@Model.Order.Id" />
                        <div class="mb-2">
                            <label class="form-label">@LocalizationService.GetString("CancelReason")</label>
                            <textarea name="reason" class="form-control" rows="2" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="bi bi-x-circle"></i> @LocalizationService.GetString("CancelOrder")
                        </button>
                    </form>
                    <form asp-action="Reorder" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="orderId" value="@Model.Order.Id" />
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-arrow-repeat"></i> @LocalizationService.GetString("Reorder")
                        </button>
                    </form>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">@LocalizationService.GetString("OrderTimeline")</h5>
                </div>
                <div class="card-body">
                    @if (Model.Order.Timeline.Any())
                    {
                        <ul class="timeline">
                            @foreach (var eventItem in Model.Order.Timeline.OrderByDescending(t => t.Timestamp))
                            {
                                <li class="timeline-item">
                                    <div class="timeline-time">@eventItem.Timestamp.ToLocalTime().ToString("g")</div>
                                    <div class="timeline-title">@LocalizationService.GetString(eventItem.Status)</div>
                                    <div class="timeline-description text-muted">@eventItem.Description</div>
                                    @if (!string.IsNullOrWhiteSpace(eventItem.ActorName))
                                    {
                                        <div class="small text-muted">@eventItem.ActorName</div>
                                    }
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-muted text-center">@LocalizationService.GetString("NoTimelineEvents")</div>
                    }
                </div>
            </div>
        </div>
    </div>
}


