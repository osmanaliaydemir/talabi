@inject ILocalizationService LocalizationService
@model Getir.MerchantPortal.Models.PagedResult<Getir.MerchantPortal.Models.ProductOptionResponse>

<div class="d-flex justify-content-between align-items-center mb-4">
	<h3>@LocalizationService.GetString("Options")</h3>
	<a class="btn btn-primary" href="@Url.Action("CreateOption", new { groupId = (Guid)ViewBag.GroupId })">
		<i class="fas fa-plus me-1"></i> @LocalizationService.GetString("Add")
	</a>
</div>

@if (Model != null && Model.Items.Any())
{
	<table class="table table-striped">
		<thead>
			<tr>
				<th>@LocalizationService.GetString("Name")</th>
				<th>@LocalizationService.GetString("ExtraPrice")</th>
				<th>@LocalizationService.GetString("DisplayOrder")</th>
				<th>@LocalizationService.GetString("Active")</th>
				<th class="text-end"></th>
			</tr>
		</thead>
		<tbody>
		@foreach (var o in Model.Items)
		{
			<tr>
				<td>@o.Name</td>
				<td>@(o.ExtraPrice?.ToString("N2") ?? "-")</td>
				<td>@o.DisplayOrder</td>
				<td>@(o.IsActive ? "Evet" : "HayÄ±r")</td>
				<td class="text-end">
					<a class="btn btn-sm btn-outline-secondary" href="@Url.Action("EditOption", new { id = o.Id })"><i class="fas fa-edit"></i></a>
					<form asp-action="DeleteOption" method="post" class="d-inline" onsubmit="return confirm('Silinsin mi?');">
						@Html.AntiForgeryToken()
						<input type="hidden" name="id" value="@o.Id" />
						<input type="hidden" name="groupId" value="@ViewBag.GroupId" />
						<button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
					</form>
				</td>
			</tr>
		}
		</tbody>
	</table>
}
else
{
	<div class="alert alert-info">@LocalizationService.GetString("NoData")</div>
}


