        @LocalizationService.GetString("GeneralNotifications")
    </h5>
    
    <div class="setting-item">
        <div class="setting-info">
            <h6>@LocalizationService.GetString("SoundNotifications")</h6>
            <small>@LocalizationService.GetString("SoundNotificationsDesc")</small>
        </div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="soundEnabled" checked>
        </div>
    </div>
    
    <div class="setting-item">
        <div class="setting-info">
            <h6>@LocalizationService.GetString("DesktopNotifications")</h6>
            <small>@LocalizationService.GetString("DesktopNotificationsDesc")</small>
        </div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="desktopNotifications" checked>
        </div>
    </div>
    
    <div class="setting-item">
        <div class="setting-info">
            <h6>@LocalizationService.GetString("EmailNotifications")</h6>
            <small>@LocalizationService.GetString("EmailNotificationsDesc")</small>
        </div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="emailNotifications">
        </div>
    </div>
</div>

