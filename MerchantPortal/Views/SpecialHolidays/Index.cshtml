@model Getir.MerchantPortal.Models.SpecialHolidayListViewModel
@inject ILocalizationService LocalizationService

@{
    ViewData["Title"] = "Özel Tatiller";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-umbrella-beach me-2"></i>Özel Tatil ve Kapanışlar
        </h2>
        @if (Model.Availability != null)
        {
            <p class="text-muted mb-0">
                @if (Model.Availability.IsOpen)
                {
                    <span class="badge bg-success me-2">@LocalizationService.GetString("Open")</span>
                    @Model.Availability.Message
                }
                else
                {
                    <span class="badge bg-danger me-2">@LocalizationService.GetString("Closed")</span>
                    @Model.Availability.Message
                }
            </p>
        }
    </div>
    <div class="d-flex gap-2">
        <form asp-action="Index" method="get" class="d-flex align-items-center">
            <input type="hidden" name="includeInactive" value="@(Model.IncludeInactive ? "false" : "true")" />
            <button type="submit" class="btn btn-outline-secondary">
                @(Model.IncludeInactive ? "Pasifleri Gizle" : "Pasifleri Göster")
            </button>
        </form>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> @LocalizationService.GetString("Create")
        </a>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-calendar-day me-2"></i>Planlanmış Tatiller
                </h5>
            </div>
            <div class="card-body p-0">
                @if (Model.Holidays.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Başlık</th>
                                    <th>Tarih Aralığı</th>
                                    <th>Durum</th>
                                    <th class="text-end">@LocalizationService.GetString("Actions")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var holiday in Model.Holidays)
                                {
                                    var isPast = holiday.EndDate < DateTime.UtcNow;
                                    <tr class="@(holiday.IsActive ? "" : "table-secondary")">
                                        <td>
                                            <div class="fw-semibold">@holiday.Title</div>
                                            <small class="text-muted">@holiday.Description</small>
                                        </td>
                                        <td>
                                            <div>
                                                @holiday.StartDate.ToString("dd MMM yyyy")
                                                -
                                                @holiday.EndDate.ToString("dd MMM yyyy")
                                            </div>
                                            @if (!holiday.IsClosed && holiday.SpecialOpenTime.HasValue && holiday.SpecialCloseTime.HasValue)
                                            {
                                                <small class="text-muted">
                                                    <i class="fas fa-clock me-1"></i>
                                                    @holiday.SpecialOpenTime.Value.ToString(@"hh\:mm") -
                                                    @holiday.SpecialCloseTime.Value.ToString(@"hh\:mm")
                                                </small>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge @(holiday.IsActive ? "bg-success" : "bg-secondary") me-1">
                                                @(holiday.IsActive ? "Aktif" : "Pasif")
                                            </span>
                                            @if (holiday.IsClosed)
                                            {
                                                <span class="badge bg-danger me-1">Kapalı</span>
                                            }
                                            @if (holiday.IsRecurring)
                                            {
                                                <span class="badge bg-info">Tekrarlayan</span>
                                            }
                                            @if (isPast)
                                            {
                                                <span class="badge bg-light text-muted">Geçmiş</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="Edit" asp-route-id="@holiday.Id" class="btn btn-outline-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form asp-action="Toggle" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@holiday.Id" />
                                                    <button type="submit" class="btn btn-outline-secondary" title="Durum değiştir">
                                                        <i class="fas fa-toggle-on"></i>
                                                    </button>
                                                </form>
                                                <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Silmek istediğinize emin misiniz?');">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@holiday.Id" />
                                                    <button type="submit" class="btn btn-outline-danger">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-4 text-center text-muted">
                        <i class="fas fa-calendar-times fa-2x mb-3"></i>
                        <p>Henüz tanımlanmış özel tatil bulunmuyor.</p>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-hourglass-start me-2"></i>Yaklaşan Tarihler
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Upcoming.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var holiday in Model.Upcoming.Take(5))
                        {
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <div class="fw-semibold">@holiday.Title</div>
                                        <small class="text-muted">@holiday.StartDate.ToString("dd MMM yyyy")</small>
                                    </div>
                                    <span class="badge @(holiday.IsClosed ? "bg-danger" : "bg-warning text-dark")">
                                        @(holiday.IsClosed ? "Kapalı" : "Sınırlı")
                                    </span>
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted mb-0">Yaklaşan özel tatil bulunmuyor.</p>
                }
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Notlar
                </h5>
            </div>
            <div class="card-body">
                <ul class="mb-0 text-muted small">
                    <li>Özel tatiller çalışma saatlerini geçersiz kılar.</li>
                    <li>Tekrarlayan etkinlikler her yıl aynı tarih aralığında uygulanır.</li>
                    <li>Pasif tatiller planlamaya dahil edilmez.</li>
                </ul>
            </div>
        </div>
    </div>
</div>

