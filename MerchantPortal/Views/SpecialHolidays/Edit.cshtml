@model Getir.MerchantPortal.Models.SpecialHolidayFormViewModel
@inject ILocalizationService LocalizationService

@{
    ViewData["Title"] = LocalizationService.GetString("Edit");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="fas fa-calendar-alt me-2"></i>
        @LocalizationService.GetString("Edit")
    </h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i> @LocalizationService.GetString("Back")
    </a>
</div>

<form asp-action="Edit" method="post" class="card">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="card-body">
        <partial name="_Form" />
    </div>
    <div class="card-footer d-flex justify-content-between">
        <div>
            <button type="submit" formaction="@Url.Action("Delete", new { id = Model.Id })" formmethod="post" class="btn btn-outline-danger me-2"
                    onclick="return confirm('Kaydı silmek istediğinize emin misiniz?');">
                <i class="fas fa-trash me-1"></i> @LocalizationService.GetString("Delete")
            </button>
        </div>
        <div class="d-flex gap-2">
            <button type="submit" formaction="@Url.Action("Toggle", new { id = Model.Id })" formmethod="post" class="btn btn-outline-primary">
                <i class="fas fa-toggle-on me-1"></i> @(Model.IsActive ? LocalizationService.GetString("Deactivate") : LocalizationService.GetString("Activate"))
            </button>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-1"></i> @LocalizationService.GetString("Save")
            </button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

