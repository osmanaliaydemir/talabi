@inject ILocalizationService LocalizationService
@model Getir.MerchantPortal.Models.PagedResult<Getir.MerchantPortal.Models.MarketProductVariantResponse>
@{
	ViewData["Title"] = LocalizationService.GetString("Variants");
}

<div class="d-flex justify-content-between align-items-center mb-4">
	<h3>@LocalizationService.GetString("Variants")</h3>
	<a class="btn btn-primary" href="@Url.Action("Create", new { productId = (Guid)ViewBag.ProductId })">
		<i class="fas fa-plus me-1"></i> @LocalizationService.GetString("Add")
	</a>
</div>

@if (Model != null && Model.Items.Any())
{
	<table class="table table-striped">
		<thead>
			<tr>
				<th>@LocalizationService.GetString("Name")</th>
				<th>@LocalizationService.GetString("SKU")</th>
				<th class="text-end">@LocalizationService.GetString("Price")</th>
				<th class="text-end">@LocalizationService.GetString("Stock")</th>
				<th class="text-end"></th>
			</tr>
		</thead>
		<tbody>
		@foreach (var v in Model.Items)
		{
			<tr>
				<td>@v.Name</td>
				<td>@v.Sku</td>
				<td class="text-end">â‚º@v.Price.ToString("N2")</td>
				<td class="text-end">
					<form asp-action="UpdateStock" method="post" class="d-inline">
						@Html.AntiForgeryToken()
						<input type="hidden" name="id" value="@v.Id" />
						<input type="hidden" name="productId" value="@ViewBag.ProductId" />
						<input type="number" name="quantity" value="@v.StockQuantity" min="0" class="form-control form-control-sm d-inline-block" style="width:100px" />
						<button type="submit" class="btn btn-sm btn-outline-primary ms-2">@LocalizationService.GetString("Update")</button>
					</form>
				</td>
				<td class="text-end">
					<a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Edit", new { id = v.Id })"><i class="fas fa-edit"></i></a>
					<form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Silinsin mi?');">
						@Html.AntiForgeryToken()
						<input type="hidden" name="id" value="@v.Id" />
						<input type="hidden" name="productId" value="@ViewBag.ProductId" />
						<button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
					</form>
				</td>
			</tr>
		}
		</tbody>
	</table>
}
else
{
	<div class="alert alert-info">@LocalizationService.GetString("NoData")</div>
}


