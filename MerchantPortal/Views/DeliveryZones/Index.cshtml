@inject ILocalizationService LocalizationService
@model List<Getir.MerchantPortal.Models.DeliveryZoneResponse>

<div class="d-flex justify-content-between align-items-center mb-4">
	<h3>@LocalizationService.GetString("DeliveryZones")</h3>
	<a class="btn btn-primary" href="@Url.Action("Create", new { merchantId = (Guid)ViewBag.MerchantId })"><i class="fas fa-plus me-1"></i> @LocalizationService.GetString("Add")</a>
</div>

@if (Model != null && Model.Any())
{
	<table class="table table-striped">
		<thead>
			<tr>
				<th>@LocalizationService.GetString("Name")</th>
				<th>@LocalizationService.GetString("DeliveryFee")</th>
				<th>@LocalizationService.GetString("Eta")</th>
				<th>@LocalizationService.GetString("Active")</th>
				<th class="text-end"></th>
			</tr>
		</thead>
		<tbody>
		@foreach (var z in Model)
		{
			<tr>
				<td>@z.Name</td>
				<td>₺@z.DeliveryFee.ToString("N2")</td>
				<td>@z.EstimatedMinutes @LocalizationService.GetString("Minutes")</td>
				<td>@(z.IsActive ? "Evet" : "Hayır")</td>
				<td class="text-end">
					<a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Edit", new { id = z.Id })"><i class="fas fa-edit"></i></a>
					<form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Silinsin mi?');">
						@Html.AntiForgeryToken()
						<input type="hidden" name="id" value="@z.Id" />
						<button type="submit" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
					</form>
				</td>
			</tr>
		}
		</tbody>
	</table>
}
else
{
	<div class="alert alert-info">@LocalizationService.GetString("NoData")</div>
}


